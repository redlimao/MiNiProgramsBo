/*===============入群===========  */
.jia{
  width:100%;
  height:200rpx;
  overflow:hidden;
}
.jia .qun{
  display:block;
  width:690rpx;
  height:100rpx;
  text-align:center;
  line-height:100rpx;
  background:#ff9a0e;
  color:#fff;
  font-size:36rpx;
  border-radius:8rpx;
  margin:0 auto;
  margin-top:50rpx;
}
.info-empty{
  width:100%;
  display:block;
  line-height:60rpx;
  font-size:36rpx;
  color:#b2b2b2;
}
/*============意见反馈============*/
.message-feedback{
  width:200rpx;
  height:100rpx;
  line-height:100rpx;
  margin:0 auto;
  overflow:hidden;
}
.message-feedback text{
  font-size:32rpx;
  line-height:100rpx;
  color:#ff9a0e;
  display:block;
  float:left;
  margin-right:20rpx;
}
.message-feedback image{
  width:36rpx;
  height:34rpx;
  display:block;
  float:left;
  margin-top:36rpx;
}