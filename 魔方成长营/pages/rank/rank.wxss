/* pages/rank/rank.wxss */
page{
    height:100%;
    float:left;
    background:#fff;
}
.list-titles{
    width:100%;
    height:100rpx;
    background:#fff;
    box-shadow:0 0 10px rgba(0,0,0,0.1);
    border-top:2rpx solid #e5e5e5;
    position:fixed;
    top:0;
}
.list-box{
  padding:0 20rpx;
}
.list-titles text{
    display:block;
    text-align: center;
    font-size:28rpx;
    height:100rpx;
    line-height:100rpx;
    float:left;
    color:#333;
}
.list{
    margin:0 20rpx;
    margin-bottom:120rpx;
    margin-top:100rpx;
}
.list-title{
  height:80rpx;
  overflow: hidden;
  border-bottom:1px solid #e6e6e6;
}
.list .list-title text{
    display:block;
    text-align: center;
    font-size:28rpx;
    height:80rpx;
    line-height:80rpx;
    float:left;
    color:#434445;
}
 .order-list{
    width:150rpx;
}
.list .list-title .active{
  color:#ff9a0e;
}
 .school-list{
    width:400rpx;
}
 .area-list{
    width:150rpx;
}
 .area-list .qian{
  width:140rpx;
  height:60rpx;
  border-radius:50rpx;
  background:#fff;
  color:#333;
  margin-top:40rpx;
  line-height:60rpx;
}
.area-list .dou{
  display:block;
  width:100%;
  height:120%;
  text-align:center;
  line-height:120rpx;
}
.my-rank{
  width:100%;
  height:120rpx;
  background:#ff9a0e;
  overflow:hidden;
  position:fixed;
  bottom:0;
}
.my-rank text{
    display:block;
    text-align: center;
    font-size:28rpx;
    height:120rpx;
    line-height:120rpx;
    float:left;
    color:#fff;
}