/* pages/mingxi/mingxi.wxss */
.main-box{
  width:100%;
  height:540rpx;
  position:relative;
  background:#fff;
  box-shadow:0 0 20rpx rgba(0,0,0,0.1);
  overflow:hidden;
  margin-bottom:20rpx;
}
/*===========轮播================*/
.banner{
  width:100%;
  height:300rpx;
}
/* ================个人信息=============== */
.message{
  width:100%;
  height:320rpx;
  overflow:hidden;
  position:absolute;
  left:0;
  bottom:0;
}
.message image{
  width:180rpx;
  height:180rpx;
  border-radius:50%;
  display:block;
  margin:0 auto;
  margin-bottom:15rpx;
  box-shadow:0 0 20rpx rgba(0,0,0,0.1);
}
.message .name{
  display:block;
  width:100%;
  text-align:center;
  font-size:32rpx;
  margin-bottom:20rpx;
}
.dirnary{
  display:block;
  color:#fff;
  background:#ff9a0e;
  text-align:center;
  line-height:40rpx;
  width:160rpx;
  border-radius:30rpx;
  font-size:24rpx;
  margin:0 auto;
}
.dirnarys{
  display:block;
  color:#fff;
  background:#08A2F1;
  text-align:center;
  line-height:40rpx;
  width:160rpx;
  border-radius:30rpx;
  font-size:24rpx;
  margin:0 auto;
}
.points{
  width:100%;
  background:#fff;
  border-top:2rpx solid #e5e5e5;
}
.points-nav{
  width:100%;
  display:flex;
  height:100rpx;
  background:#fff;
  margin-bottom:20rpx;
  border-bottom:2rpx solid #e5e5e5;
  justify-content:space-around;
}
.points-nav text{
  width:120rpx;
  font-size:34rpx;
  color:#696969;
  text-align: center;
  line-height:100rpx;
}
 .points-nav .active{
  color:#ff9a0e;
  border-bottom:4rpx solid #ff9a0e;
}
.points-inner{
  width:100%;
}
.shou-list{
  height:100rpx;
  border-bottom:2rpx solid #e5e5e5;
  overflow:hidden;
  padding:20rpx;
}
.shou-list .list-fl{
  width:80%;
  height:100%;
  float:left;
}
.shou-list .list-fl .text{
  display:block;
  width:100%;
  font-size:32rpx;
  color:#696969;
  margin-bottom:10rpx;
}
.shou-list .list-fl .time{
  display:block;
  width:100%;
  font-size:28rpx;
  color:#b1b1b1;
}
.shou-list .list-fr{
  width:20%;
  height:100%;
  float:left;
  line-height:100rpx;
  font-size:40rpx;
  color:#ff9a0e;
  text-align:center;
}
.right-item{ 
 display: none; 
} 
 .right-item.active{ 
 display: block; 
}
.empty{
  width:100%;
  border-bottom:2rpx solid #e5e5e5;
  line-height:100rpx;
  color:#b2b2b2;
  font-size:32rpx;
  text-align:center;
}