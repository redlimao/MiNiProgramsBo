/**details.wxss**/
.menu{width: 100%;box-sizing: border-box;padding:20rpx;display: flex;flex-wrap: wrap;}
    .m-item{padding: 0 20rpx;height: 50rpx;line-height: 50rpx;text-align: center;border: 2rpx solid #9C9C9C;box-sizing: border-box;margin-right: 40rpx;font-size: 28rpx;color: #2C2C2C;margin-bottom: 20rpx;}
    .m-item.on{background-color: #FDCF44;border:2rpx solid #FDCF44;color: #fff;}

.con{width: 100%;display: flex;flex-wrap: wrap;padding: 0 10rpx;box-sizing: border-box;}
    .c-item{width: 345rpx;margin: 0 10rpx;}
        .c-img{width: 345rpx;height: 518rpx;background-color: #ccc;}
        .c-txt{text-align: center;line-height: 62rpx;font-size: 30rpx;color: #2C2C2C;}
/* 弹出层 */
.pop-bg{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background-color: rgba(0,0,0,.5);display: none;z-index: 2;}
.pop-con{width: 710rpx;height: 1000rpx;position: fixed;top: 50%;left: 50%;transform: translate(-50%,-50%);display: none;box-sizing: border-box;z-index: 3;}
.pop-bg.on,.pop-con.on{display: block;}
    .tags{background-color: #fff;width: 710rpx;height: 830rpx;padding:30rpx 18rpx;overflow-y: scroll;box-sizing: border-box;display: flex;flex-wrap: wrap;border-radius: 10rpx;align-content:flex-start;}
        .t-item{height: 50rpx;line-height: 50rpx;padding: 0 20rpx;border: 2rpx solid #9C9C9C;box-sizing: border-box;font-size: 28rpx;color: #2C2C2C;margin: 30rpx 42rpx;}
        .t-item.on{background-color: #FDCF44;border:2rpx solid #FDCF44;color: #fff;}
    .btn-choose{width: 710rpx;height: 110rpx;line-height: 110rpx;text-align: center;font-size: 36rpx;color: #2C2C2C;border-radius: 10rpx;background-color: #fff;margin-top: 60rpx;}
.empty{text-align: center;padding: 200rpx 0;color:#9C9C9C;font-size: 28rpx;}