.chose{
  margin-top:30rpx;
  font-size:28rpx;
  color:#b2b2b2;
  padding-left:30rpx;
}
.top{
  overflow:hidden;
  width:690rpx;
  margin:0 auto;
  height:200rpx;
  box-shadow:0 0 10px rgba(0,0,0,0.1);
  border:1px solid #fff;
  position:relative;
  background:#fff;
  margin-top:30rpx;
  border-radius:10rpx;
  margin-bottom:30rpx;
}
.top .top-fl{
  float:left;
  width:25%;
  height:100%;
  position: relative;
}
.top .top-fl image{
  width:100rpx;
  height:100rpx;
  position: absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin:auto;
}
.top .top-fr{
  width:70%;
  float:left;
  height:100rpx;
  margin-top:50rpx;
}
.top .top-fr text{
  display:block;
}
.top .top-fr .school-name{
  font-size:32rpx;
  line-height:100rpx;
}
.top .top-fr .school-type{
  font-size:24rpx;
  display:inline-block;
  margin-right:20rpx;
}
button{
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
}
button:after{
  border:none;
}
.times{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  color:#b2b2b2;
  font-size:30rpx;
  text-align:center;
  margin-top:120rpx;
}