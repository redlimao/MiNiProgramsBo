@import "../template/template.wxss";
/*==========轮播=========*/
page{
  background:#fff;
}
.swiper{
  width:100%;
  height:300rpx;
}
.swiper image{
  width:100%;
  height:300rpx;
  display:block;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:60rpx;
    display: inline-flex;
    height: 6rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:#fff;    
}
.choe-list.actives .time{
  color:#41b9ad;
}
/*==========商城列表============*/
#swiper-inner swiper-item{
  overflow:auto;
}
.shop_inner .shop-list{
  border-radius:0;
}
.pro_navs{
  width:200%;
}
.pro_navss .pronav-list{
  height:50rpx;
  line-height:50rpx;
  font-size:26rpx;
  color:rgb(177,174,171);
  overflow:hidden;
  position:relative;
  box-sizing: border-box;
  border-radius:0rpx;
  padding:0;
}
.pro_navss .pronav-list.actives{
  color:#816540;
  background:none;
  border-bottom:4rpx solid #816540;
}