@import "../template/template.wxss";
/* =========搜索======= */

.search-box{width:100%;padding:10rpx 0;}
	.search{width:710rpx;margin:0 auto;border-radius:5rpx;background:#fff;border:2rpx solid #e8e9ea;position:relative;box-radius:30%;}
		.search-icon{width:30rpx;height:30rpx;position:absolute;top:16rpx;right:20rpx;z-index:3;} 
		.search-input{width:670rpx;padding:0 20rpx;height:60rpx;line-height:60rpx;color:rgb(153,153,153);font-size:28rpx;text-align:center;}


/*==========轮播=========*/
.swiper{
  width:100%;
  height:300rpx;
}
.swiper image{
  width:100%;
  height:300rpx;
  display:block;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:60rpx;
    display: inline-flex;
    height: 6rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:#fff;    
}
.choe-list.actives .time{
  color:#ea541d;
}
/*==========商城列表============*/
#swiper-inner swiper-item{
  overflow:auto;
}
