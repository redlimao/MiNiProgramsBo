@import "../template/template.wxss";
/* =============商品信息============ */
.container{
  padding-bottom:100rpx;
}
.shop-message{
  width:100%;
}
swiper{
   height:750rpx;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:60rpx;
    display: inline-flex;
    height: 6rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:#fff;    
}
.shop-message .shopde-img{
  width:100%;
  height:750rpx;
  display:block;
}
.shop-message .shop-names{
  width:690rpx;
  height:90rpx;
  background:#fff;
  padding:0 30rpx;
  display:flex;
  justify-content:space-between;
}
.shop-message .shop-names .shop-name{
  width:80%;
  font-size:30rpx;
  display:block;
  color:rgb(55, 54, 52);
  line-height:90rpx;
  overflow:hidden;
}
.share{
  width:20%;
  height:100%;
  position: relative;
}
.share .share-icon{
  width:33rpx;
  height:30rpx;
  display:block;
  margin:0 auto;
  margin-top:15rpx;
  margin-bottom:5rpx;
}
.share .share-text{
  display:block;
  color:rgb(177,174,171);
  font-size:22rpx;
  text-align:center;
}
contact-button {
   display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
}
.buttons{
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
}
button:after{
  border:none;
}
/* =============商品详情，评论============ */
.shop-inner{
  width:100%;
  background:#fff;
  margin-top:20rpx;
}
.shop-inner .shopInner-nav{
  width:100%;
  height:90rpx;
  border-bottom:1rpx solid #eee;
  border-top:20rpx solid #eee;
  display:flex;
  justify-content:space-around;
}
.shopInner-nav .shopInner-name{
  display:block;
  font-size:30rpx;
  line-height:90rpx;
  box-sizing: border-box;
}
.shopInner-nav .shopInner-name.actives{
