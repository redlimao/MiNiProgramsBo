  margin-top:80rpx;
}
.company_tels .company_phone{
  width:100%;
  height:100%;
}

.people-list{
  width:690rpx;
  border-radius:6rpx;
  margin:0 auto;
  margin-bottom:20rpx;
  position: relative;
  overflow:hidden;
}
.people-box{
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  position: absolute;
  left:0;
  right:0;
  z-index:1;
  margin:0 auto;
  background:#fff;
  box-shadow: 0 0 20px rgba(0,0,0,0.05);
}
.people-img{
  width:150rpx;
  height:150rpx;
  border-radius:50%;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.people-cont{
  width:650rpx;
  border-radius:6rpx;
  background:#fff;
  margin:0 auto;
  margin-top:80rpx;
  padding:0 20rpx;
  padding-top:80rpx;
  padding-bottom:30rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
}
.people-cont .people-name{
  font-size:36rpx;
  color:#434343;
  margin-bottom:26rpx;
}
.people-cont .people-info{
  font-size:30rpx;
  color:#434343;
}
.right-item{
  display:none;
}
.right-item.active{
  display:block;
}
.mask{
  width:100%;
  height:1110rpx;
  background:rgba(0,0,0,0.8);
  position:fixed;
  left:0;
  top:0;
  z-index:1
}
.mask .yuan{
  width:100%;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}

