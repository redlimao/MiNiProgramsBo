@import "../template/template.wxss";
/* =========搜索======= */
.search-box{
  width:100%;
  height:100rpx;
  background:#bd8a39;
  overflow:hidden;
  display:flex;
  justify-content:space-between;
}
.add{
  overflow:hidden;
  margin-left:30rpx;
}
.add .add-icon{
  width:23rpx;
  height:28rpx;
  float:left;
  display:block;
  margin-top:36rpx;
  margin-right:10rpx;
}
.add .add-text{
  font-size:30rpx;
  color:#fff;
  display:block;
  float:left;
  line-height:100rpx;
}
.search{
 width:660rpx;
  height:70rpx;
  position:relative;
  margin:0 auto;
  margin-top:15rpx;
  background: #fff;
  box-shadow: 0 0 15px rgba(0,39,76,0.2);
  border-radius:6rpx;
  overflow:hidden;
}
.search-inp{
  width:590rpx;
  padding-right:70rpx;
  height:100%;
  background:#fff;
  text-align:center;
  font-size:30rpx;
  position:absolute;
  left:0;
  top:0;
}
.search-btn{
  width:70rpx;
  height:30rpx;
  position:absolute;
  top:0;
  bottom:0;
  margin:auto;
  right:0;
  z-index:2;
}
.search-icon{
  width:30rpx;
  height:30rpx;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}
/*==========轮播=========*/
.swiper{
  width:100%;
  height:300rpx;
}
.swiper image{
  width:100%;
  height:300rpx;
  display:block;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:60rpx;
    display: inline-flex;
    height: 6rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:#fff;    
}
.choe-list.actives .time{
  color:#bd8a39;
}
/*==========商城列表============*/
#swiper-inner swiper-item{
  overflow:auto;
}
