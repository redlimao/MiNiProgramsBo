/*搜索*/
.search-box{width:100%;padding:10rpx 0;}
	.search{width:710rpx;margin:0 auto;border-radius:5rpx;background:#fff;border:2rpx solid #e8e9ea;position:relative;}
		.search-icon{width:27rpx;height:27rpx;position:absolute;top:16rpx;right:20rpx;z-index:3;} 
		.search-input{width:670rpx;padding:0 20rpx;height:56rpx;line-height:56rpx;color:rgb(153,153,153);font-size:24rpx;text-align:center;}

.wrap{display:flex;}
    .slider-menus{width:180rpx;background-color:#fff;height:100%;}
        .item{line-height:90rpx;height:90rpx;text-align:center;color:#333;border-left:4rpx solid transparent;box-sizing:border-box;width:180rpx;font-size:28rpx;border-bottom:1px solid #f4f4f4;}
        .item.on{border-left:4rpx solid #bd8a39;background-color:#f4f4f4;color:#bd8a39;}
    .content{width:600rpx;padding:20rpx;box-sizing:border-box;}
            .c-title{height:70rpx;font-size:28rpx;line-height:70rpx;color:#999;width:100%;background-color:#fff;box-sizing:border-box;padding-left:20rpx;font-weight:bold;}
            .c-tit{height:70rpx;font-size:28rpx;line-height:70rpx;width:100%;box-sizing:border-box;padding-left:20rpx;color:#bd8a39;}
            .list{padding-top:20rpx;display:flex;justify-content:space-between;flex-wrap:wrap;}
                .c-item{width:260rpx;height:70rpx;font-size:28rpx;line-height:70rpx;color:#999;margin-bottom:15rpx;padding:0 15rpx;box-sizing:border-box;background-color:#fff;overflow:hidden;border-radius: 5rpx;}
        .w-empty{height:70rpx;font-size:28rpx;line-height:70rpx;color:#999;width:100%;box-sizing:border-box;padding-top:20rpx;text-align:center;}

/* 广告位 */
.img-boxs{width:690rpx;position: relative;display: block; margin:0 auto;margin-top:20rpx;}
.img-boxs.hide{display: none;}
.img-box{width:100%;height:198rpx;} 
.close-img{width: 125rpx;height: 50rpx;position: absolute;z-index: 2;left: 0;top: 10rpx;}

/* 弹窗样式 */
/* ===领券弹框=== */
.ling-mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  background:rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  flex-direction: column;
  z-index:2
}

.pop-bg{position: fixed;width: 100%;height: 100%;background-color: rgba(0,0,0,0.5);top: 0;left: 0;z-index: 2;display: none;}
.pop{width: 560rpx;height: 671rpx;position:fixed;top: 50%;left: 50%;z-index: 3;margin-left: -280rpx;margin-top: -335rpx;display: none;}
.pop1{width: 580rpx;padding: 0 20rpx 20rpx 20rpx;box-sizing: border-box;position: fixed;margin: auto;top: 50%; left: 50%;background-color: #fff;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);}
.pop-bg.on,.pop.on,.pop1.on{display: block;}
    .p-close{width: 60rpx;height: 60rpx;position: absolute;top: 725rpx;left: 250rpx;z-index: 3;}
    .pop-img{position: absolute;top: 0;left: 0;width: 560rpx;height: 671rpx;z-index: 3;}
    .pop-content{position: absolute;top: 0;left: 0;padding-top: 245rpx;height: 426rpx;width: 560rpx;z-index: 4;}
        .p-coupon-view{width: 510rpx;display: flex;justify-content: center;margin:0 auto}
            .p-item{width: 172rpx;height: 172rpx;position: relative;}
                .p-item-img{position: absolute;width: 172rpx;height: 172rpx;top: 0;left: 0;}
                .p-item-con{position: absolute;padding-top: 20rpx;width: 172rpx;height: 152rpx;top: 0;left: 0;z-index: 5;}
                    .p-money{display: flex;height: 80rpx;justify-content: center;align-items: baseline;}
                        .p-money-icon{color: #f9392c;font-size:30rpx}
                        .p-moneys{line-height: 80rpx;font-size: 60rpx;color: #f9392c;}
                    .p-txts{width: 150rpx;padding-top:8rpx;border-top:1rpx dotted #cacaca;color: #666666;font-size: 20rpx;text-align:center;margin:0 auto;display:block;}
        .p-texts{padding-top: 29rpx;line-height: 40rpx;text-align: center;font-size: 24rpx;color: #9a9a9a;display:block;}
        .p-btn{margin: 0 auto;margin-top: 70rpx;width: 500rpx;height: 80rpx;border-radius: 5rpx;background-color: #f84033;color:#fff;font-size: 30rpx;text-align: center;line-height: 80rpx;}