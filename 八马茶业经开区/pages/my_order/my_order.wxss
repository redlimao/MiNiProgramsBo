@import "../template/template.wxss";
.pop-bg.on{display: block;}
.pop.on{transform: translateY(0rpx)}
.pop-bg{position: fixed;width: 100%;height: 100%;background-color: rgba(0,0,0,0.5);top: 0;left: 0;z-index: 2;display: none;}
    .pop{position: absolute;left: 0;bottom: 0;z-index: 3;width: 100%;transform: translateY(220rpx);transition: all .2s ease .2s;}
        .pop-txt{line-height: 80rpx;background-color: #fff;border-top: 1rpx solid #eee;text-align: center;display: block;width: 100%;font-size: 30rpx;color: #333;box-sizing: border-box;}