.banner{
  width:100%;
  height:350rpx;
}
.banner .banner-img{
  width:100%;
  height:350rpx;
}
.form{
  width:650rpx;
  background:#fff;
  border-radius:6rpx;
  padding: 30rpx 20rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:310rpx;
  padding-bottom:80rpx;
}
.form form{
  width:100%;
  height:100%;
}
.form-title{
  width:610rpx;
  margin:0 auto;
  display:flex;
  justify-content:space-between;
  margin-bottom:30rpx;
}
.form-form{
  display:block;
  font-size:34rpx;
  color:rgb(0,24,52);
  font-weight:bold;
}
.form-time{
   display:block;
  font-size:26rpx;
  color:rgb(127,127,127);
}
.line{
  width:610rpx;
  height:4rpx;
  margin:0 auto;
  margin-bottom:30rpx;
   background: -webkit-linear-gradient(left top, #d77eef , #ffaaf9);
  background: -moz-linear-gradient(left top, #d77eef , #ffaaf9);
}
.form-list{
  width:610rpx;
  height:80rpx;
  margin:0 auto;
  margin-bottom:50rpx;
  position:relative;
  background:#f8f8f8;
}
.list-title{
  display:block;
  width:20%;
  padding-left:5%;
  line-height:80rpx;
  font-size:30rpx;
  color:rgb(0,24,52);
  position:absolute;
  z-index:1;
}
.form-list input{
  display:block;
  width:70%;
  padding-left:30%;
  position:absolute;
  background:#f8f8f8;
  height:80rpx;
  font-size:30rpx;
  color:rgb(127,127,127);
}
.form-list .time-picker{
  width:35%;
  float:left;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  color: rgb(127,127,127);
}
.form-list .time-pickerss{
  display:block;
  width:70%;
  padding-left:30%;
  position:absolute;
  background:#f8f8f8;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  color:rgb(127,127,127);
}
.form-list .time-pickers{
  margin-left:30%;
}
button{
  display:block;
  width:610rpx;
  height:80rpx;
  text-align:center;
  line-height:80rpx;
  border:none;
  margin-top:60rpx;
  background: -webkit-linear-gradient(left top, #d77eef , #ffaaf9);
  background: -moz-linear-gradient(left top, #d77eef , #ffaaf9);
  color:rgb(0,24,52);
  font-size:30rpx;
  margin:0 auto;
  border-radius:50rpx;
  box-shadow: 0 10rpx 20px #ffaaf9;
}
button:after{
  border:none;
}