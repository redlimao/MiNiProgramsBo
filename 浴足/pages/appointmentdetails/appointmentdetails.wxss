/* pages/appointmentdetails/appointmentdetails.wxss */
.box-f{width: 100%;}
.model{width: 100%;height: 90rpx;display: flex;align-items: center;background-color: #fff;padding: 0 24rpx;box-sizing: border-box;}
.model-d{width: 100%;display: flex;line-height: 90rpx;background-color: #fff;padding: 0 24rpx;box-sizing: border-box;}
    .txt-d{padding-top: 16rpx;line-height: 60rpx;height: 60rpx;}
    .txt-e{padding-top: 16rpx;line-height: 60rpx;}
.model-list{width: 100%;}
    .tit{font-size: 28rpx;color: #333333;}
    .txt-a{font-size: 26rpx;color: #9a9a9a;}
    .txt-b{font-size: 30rpx;color: #9a9a9a;}
    .box{width: 152rpx;height: 40rpx;display: flex;border: 1rpx solid #9a9a9a;box-sizing: border-box;font-size: 26rpx;text-align: center;border-radius: 5rpx;}
        .box-txt1,.box-txt3{width: 40rpx;height: 40rpx;line-height: 40rpx;box-sizing: border-box;}
        .box-txt1{color: #9a9a9a;}
        .box-txt2{color: #333333;border-left:1rpx solid #9a9a9a;border-right:1rpx solid #9a9a9a;box-sizing: border-box;}
        .box-txt3{color: #59d0d0;}
    .input-txt{height: 90rpx;line-height: 90rpx;color:#333333;font-size: 28rpx;flex: 1;margin-left: 20rpx;}
        .box-picker{position: absolute;height: 90rpx;top: 0;left: 0;z-index: 2;}
        .picker-tit,.picker-tit1{height:90rpx;width: 250rpx;font-size: 28rpx;color: #333333;line-height: 90rpx;text-align: center;}
        .picker-tit1{width: 380rpx;text-align: right;padding-right: 70rpx;}
.area-box{padding:24rpx;background-color: #fff;}
    .txt-a{line-height: 60rpx;}
    .areas{height: 144rpx;width: 100%;padding: 12rpx 24rpx;line-height: 60rpx;background-color: #f0f0f0;font-size: 28rpx;color: #9a9a9a;box-sizing: border-box;}
    .tags{padding-top: 24rpx;display: flex;flex-wrap: wrap;}
        .item{height: 50rpx;padding: 0 20rpx;line-height: 50rpx;background-color:#e2f2f4;color: #59d0d0;font-size: 24rpx;margin: 0 20rpx 10rpx 0;border-radius: 5rpx;}
        .item.on{background-color: #59d0d0;color: #fff;}

    .info{height: 100rpx;align-items: center;padding: 0 24rpx;display: flex;}
    .url{color: #59d0d0;text-decoration: underline;font-size: 26rpx;}
    .btn-sure{width: 685rpx;height: 92rpx;text-align: center;line-height: 92rpx;color: #fff;font-weight: bold;font-size: 32rpx;background-color:#59d0d0;}

/* 弹窗 */
.p-tit{height: 80rpx;line-height: 80rpx;color:#59d0d0;font-size: 34rpx;text-align: center;}
.p-close{height: 80rpx;width: 100rpx;text-align: right;position: absolute;line-height: 80rpx;color:#59d0d0;font-size: 30rpx;top: 0;left: 460rpx;}
.p-txt{line-height: 40rpx;color: #333333;font-size: 26rpx;padding: 20rpx 0;}

.model-d input{overflow:visible;color: #333333;}



