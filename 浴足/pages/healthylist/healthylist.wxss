/* pages/healthylist/healthylist.wxss */
.banner{width: 100%;height: 300rpx;}
/* 头部标题 */
.title{height: 90rpx;width: 100%;display: flex;padding: 0 24rpx;box-sizing: border-box;align-items: center;background-color: #fff;}
    .title-icon{width: 8rpx;height: 50rpx;background-color: #59d0d0;}
    .title-txt{font-size: 32rpx;color: #333333;padding-left: 22rpx;}
/* 列表 */
.list{padding: 0 24rpx 30rpx 24rpx;width: 100%;box-sizing: border-box;background-color: #fff;}
    .item{padding: 20rpx 0 30rpx 0;display: flex;}
        .img{width: 200rpx;height: 200rpx;background-color: #ccc;}
        .infos{padding-left: 20rpx;flex: 1;display: flex;flex-direction: column;}
            .tit{line-height: 50rpx;font-size: 34rpx;color: #333333;}
            .tit-box{display: flex;justify-content: space-between;align-items: flex-end;flex: 1;}
                .texts{line-height: 44rpx;font-size: 26rpx;color: #d3d3d3;}


