/**servelist.wxss**/
/* banner */
.banner{width: 100%;height: 300rpx;}
/* 提示 */
.areas{padding: 20rpx 24rpx 20rpx 24rpx;line-height: 38rpx;font-size: 24rpx;color: #a5a5a5;background-color: #fff;width: 100%;box-sizing: border-box;}
/* 列表 */
.list{padding:0 24rpx 30rpx 24rpx;width:100%;box-sizing:border-box;background-color:#fff;}
    .item{display:flex;padding:20rpx 0 20rpx 0;height:154rpx;}
    .item:nth-last-child(1){border: none;}
        .item-img{width:200rpx;height:144rpx;background-color:#ccc;}
        .info{padding-left:20rpx;flex:1;}
            .wrap{display:flex;height:48rpx;align-items:center;}
                .tit{font-size:28rpx;height:48rpx;line-height:48rpx; color:#333333;flex:1;}
            .texts{height:36rpx;width:100%;line-height:36rpx;font-size:24rpx;color:#9a9a9a;overflow:hidden;-webkit-line-clamp:1;display:-webkit-box;-webkit-box-orient:vertical;}
                .wrap-txt{font-size:26rpx;flex:1;color:#9a9a9a;}
                .btn-a{width: 140rpx;height: 48rpx;text-align: center;line-height: 48rpx;border:1rpx solid #06c5b6;border-radius: 5rpx;color: #06c5b6;font-size: 24rpx;box-sizing: border-box;}

