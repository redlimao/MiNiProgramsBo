/* pages/picVoting/picVoting.wxss */
/* 主体 */
.con{padding-top: 40rpx;}
    .modules{border-top: 1rpx solid #EEEEEE;border-bottom: 1px solid #EEEEEE;background-color: #fff;width: 100%;padding: 0 20rpx;box-sizing: border-box;margin-bottom: 20rpx;}
        .item{width: 100%;height: 111rpx;display: flex;align-items: center;border-bottom: 1rpx solid #EEEEEE;}
        .item.on{padding: 0 20rpx;box-sizing: border-box;}
        .item:last-child{border-bottom: 0;}
            .input-txt{flex: 1;font-size: 34rpx;color: #333333;}
            .p-c{font-size: 34rpx;color: #9EA5B9;}
            .add-icon,.subtract-icon{width: 64rpx;height: 64rpx;padding: 20rpx;}
            .i-icon{width: 64rpx;height: 64rpx;padding: 20rpx;}
        .p-box{width: 285rpx;height:111rpx;}    
            .p-txt{font-size: 30rpx;color: #9EA5B9;text-align: center;width: 100%;height: 111rpx;line-height: 111rpx;}
    /* 图片上传 */
    .pic-list{padding-top: 20rpx;}
        .pic-item{margin-bottom: 20rpx;width: 100%;background-color: #fff;}
            .pic-box{position: relative;height: 400rpx;width: 100%;border-bottom: 1px solid #EEEEEE;}
                .pic-normal{width: 263rpx;height: 175rpx;position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);}
                .pic-now{width: 100%;height: 400rpx;}
/* 操作按钮 */
.btns{padding: 80rpx 40rpx;display: flex;justify-content: space-between;}
    .btn-one,.btn-two{width:310rpx;height:84rpx; border-radius: 42rpx;text-align: center;box-sizing: border-box;}
    .btn-one{border: 2rpx solid #238BED;color:#238BED;line-height: 80rpx;}
    .btn-two{background:linear-gradient(-135deg,rgba(73,191,247,1),rgba(35,139,237,1));
box-shadow: 0rpx 10rpx 15rpx 0rpx rgba(36,140,237,0.3);color: #fff;line-height: 84rpx;}


