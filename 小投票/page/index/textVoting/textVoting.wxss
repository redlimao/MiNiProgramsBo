    .btn-one{border: 2rpx solid #238BED;color:#238BED;line-height: 80rpx;}
    .btn-two{background:linear-gradient(-135deg,rgba(73,191,247,1),rgba(35,139,237,1));
box-shadow: 0rpx 10rpx 15rpx 0rpx rgba(36,140,237,0.3);color: #fff;line-height: 84rpx;}


