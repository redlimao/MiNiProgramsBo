page{background-color: #fff;}
.container{padding: 0 20rpx;width: 100%;box-sizing: border-box;}
    /* 参与人数 分享 */
    .top{width: 100%;height: 120rpx;display: flex;align-items: center;justify-content: space-between;position: relative;}
        .t-img{width: 80rpx;height: 80rpx;position: absolute;top: 20rpx;left: 0;z-index: 2;}
        .t-num{padding: 0 32rpx 0 96rpx;height: 60rpx;line-height: 60rpx;font-size: 30rpx;color: #9EA5B9;background-color: #F2F4F8;border-radius: 0 30rpx 30rpx 0;}
        .t-share{width: 88rpx;height: 88rpx;display: block;}
        .btn-share{position: absolute;height: 88rpx;width: 88rpx;right: 0;top: 20rpx;opacity: 0;}
    /* 标题 */
    .title{padding: 10rpx 0;line-height: 56rpx;font-size: 40rpx;color: #27282B;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
    /* 补充说明 */
    .titles{padding: 10rpx 0;line-height: 43rpx;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;font-size: 30rpx;color: #9EA5B9;}
    /* 截止时间 */
    .time{font-size: 24rpx;color: #27282B;height: 86rpx;line-height: 86rpx;}
    /* 选项 */
    .list{border-top: 1rpx solid #EEEEEE;margin-top: 10rpx;}
        .item{padding: 30rpx 0 40rpx 0;display: flex;}
            .info{flex: 1;}
                .info-tit{line-height: 50rpx;font-size: 30rpx;color: #27282B;}
                    .col{color: #9EA5B9;}
                .info-grey{margin-top: 8rpx;width: 100%;height: 20rpx;background-color: #F3F4F8;border-radius: 10rpx;}
            .info-btn{margin-left: 20rpx;}
                .info-icon{width: 50rpx;height: 50rpx;display: block;}
                .info-num{font-size: 24rpx;color: #27282B;padding-top: 5rpx;text-align: center;}
/* 操作按钮 */
.btns{padding: 80rpx 20rpx;display: flex;justify-content: space-between;}
    .btn-one,.btn-two{width:310rpx;height:84rpx; border-radius: 42rpx;text-align: center;box-sizing: border-box;}
    .btn-one{border: 2rpx solid #238BED;color:#238BED;line-height: 80rpx;}
    .btn-two{background:linear-gradient(-135deg,rgba(73,191,247,1),rgba(35,139,237,1));
box-shadow: 0rpx 10rpx 15rpx 0rpx rgba(36,140,237,0.3);color: #fff;line-height: 84rpx;}

