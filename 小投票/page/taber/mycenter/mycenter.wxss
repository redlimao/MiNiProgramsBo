/* pages/list/list.wxss */
.wrap{width: 100%;height:320rpx;display: flex;flex-direction: column;justify-content:space-between;background-color: #fff;padding-top: 10rpx;box-sizing:border-box;align-items: center;}
    .img-box{width: 100rpx;height: 100rpx;border-radius: 50%;display: block;background-color: #ccc;overflow: hidden;position: relative;}
        .i-txt{padding: 15rpx;color: #fff;font-size: 26rpx;text-align: center;line-height: 35rpx;display: none;}
        .i-btn{position: absolute;z-index: 2;width: 100rpx;height: 100rpx;opacity: 0;display: none;top: 0;left: 0;}
        .w-img{width: 100rpx;height: 100rpx;display: none;}
        .i-txt.on,.i-btn.on,.w-img.on{display: block;}
    .w-txt{font-size: 30rpx;color: #9EA5B9;height: 30rpx;line-height: 30rpx;}
    .btn-in{border: 2rpx solid #238BED;width:150rpx;height:50rpx;border-radius:250rpx;display: flex;align-items: center;justify-content: center;}
        .btn-txt{font-size: 26rpx;color: #238BED;padding-right: 8rpx;}
        .btn-icon{width:14rpx;height:26rpx;display: block;}
/* 菜单 */
    .menu{width:100%;display: flex;justify-content: space-around;}
        .m-item{height: 64rpx;padding-top: 10rpx;display: flex;flex-direction: column;justify-content: space-between;align-items: center;}
        .m-item.on .m-item-t{color: #238BED;}
        .m-item.on .m-line{background-color:#238BED; }
            .m-item-t{color: #9EA5B9;font-size: 34rpx;}
            .m-line{width:100rpx;height:6rpx; background-color:transparent;border-radius: 3rpx;}

/* 列表 */
.con{padding: 30rpx 20rpx;width: 100%;box-sizing: border-box;}
    .item{width: 710rpx;height: 260rpx;padding: 20rpx;box-sizing: border-box;background:rgba(255,255,255,1);box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(0,76,152,0.1);border-radius: 20rpx;position: relative;margin-bottom: 30rpx;}
        .tip{width: 70rpx;height: 70rpx;border-radius: 0 0 35rpx 35rpx;background-color: #ccc;position: absolute;z-index: 2;top: 0;right: 40rpx;}
        .info-t{display: flex;height: 64rpx;align-items: center;padding-right: 100rpx;}
            .info-img{width: 64rpx;height: 64rpx;border-radius: 50%;display: block;background-color: #ccc;}
            .info-name{font-size: 30rpx;color: #9EA5B9;padding-left: 20rpx;flex: 1;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 1;}
        .info-tit{font-size: 34rpx;color: #27282B;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;line-height: 48rpx;padding-top: 13rpx;}
        .info-b{display: flex;padding-top: 21rpx;justify-content:space-between;}
            .info-txt{font-size: 26rpx;color: #9EA5B9;}
            .col{color: #FF1557;}
.empty{width: 104rpx;height: 164rpx;margin: 200rpx auto;display: block;}