page{background-color: #fff;}
.container{padding: 0 20rpx;width: 100%;box-sizing: border-box;}
    /* 参与人数 分享 */
    .top{width: 100%;height: 120rpx;display: flex;align-items: center;justify-content: space-between;position: relative;}
        .t-img{width: 80rpx;height: 80rpx;position: absolute;top: 20rpx;left: 0;z-index: 2;}
        .t-num{padding: 0 32rpx 0 96rpx;height: 60rpx;line-height: 60rpx;font-size: 30rpx;color: #9EA5B9;background-color: #F2F4F8;border-radius: 0 30rpx 30rpx 0;}
        .t-share{width: 80rpx;height: 80rpx;display: block;}
        .btn-share{position: absolute;height: 80rpx;width: 80rpx;right: 0;top: 20rpx;opacity: 0;}
    /* 标题 */
    .title{padding: 10rpx 0;line-height: 56rpx;font-size: 40rpx;color: #27282B;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
    /* 补充说明 */
    .titles{padding: 10rpx 0;line-height: 43rpx;overflow: hidden;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;font-size: 30rpx;color: #9EA5B9;}
    /* 截止时间 */
    .time{font-size: 24rpx;color: #27282B;height: 86rpx;line-height: 86rpx;}
    /* 选项 */
    .list{border-top: 1rpx solid #EEEEEE;margin-top: 10rpx;}
        .item{padding: 30rpx 0 40rpx 0;}
            .i-img{width: 100%;height: 378rpx;display: block;border-radius: 10rpx;}
            .info-box{width: 100%;display: flex;padding-top: 30rpx;}
                .info{flex: 1;}
                    .info-tit{line-height: 50rpx;font-size: 30rpx;color: #27282B;}
                        .col{color: #9EA5B9;}
                    .info-grey{margin-top: 8rpx;width: 100%;height: 20rpx;background-color: #F3F4F8;border-radius: 10rpx;overflow: hidden;}
                    .info-light{height:20rpx; background:linear-gradient(135deg,rgba(255,140,24,1),rgba(255,188,33,1));border-radius: 10rpx;transition:all .5s ease-in 1s;}
                .info-btn{margin-left: 20rpx;}
                    .info-icon{width: 50rpx;height: 12rpx;display: block;padding: 24rpx 0;}
                    .info-num{font-size: 24rpx;color: #27282B;text-align: center;}
/* 弹窗 */
.pop-bg{width: 100%;height: 100%;position: fixed;z-index: 9;top: 0;left: 0;background-color: rgba(0,0,0,.5);display: none;}
.pop{position: fixed;width: 710rpx;height: 500rpx;background-color: #fff;border-radius: 20px ;bottom: 40rpx;left: 50%;transform: translate(-50%,600rpx);z-index: 99;transition: all .2s ease-out;opacity: 0;padding:100rpx 35rpx 20rpx 35rpx;box-sizing: border-box;}
.pop-bg.on{display: block;}
.pop.on{transform: translate(-50%,0);opacity: 1;}
    .pop_list{display: flex;flex-wrap: wrap;height:288rpx;align-content:space-between;}
        .p-item{width: 213rpx;height:126rpx;display: flex;align-items: center;justify-content: space-around;flex-direction: column;}
            .p-tit{font-size: 54rpx;color: #9EA5B9;}
            .p-icon{width: 64rpx;height: 64rpx;display: block;}
            .p-txt{font-size: 30rpx;color: #27282B;}
            .p-tits{width:88rpx;height:88rpx;border-radius: 50%;border:2rpx solid #9EA5B9;box-sizing: border-box;text-align: center;line-height: 88rpx;font-size: 32rpx;color: #9EA5B9;}
        .pop-tip{padding-top: 60rpx;display: flex;justify-content: center;align-items: center;}
            .pop-tip-i{width: 24rpx;height: 24rpx;display: block;}
            .pop-tip-t{font-size: 24rpx;color: #9EA5B9;padding-left: 9rpx;}




