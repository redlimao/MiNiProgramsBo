/**personage.wxss**/
.banner{width:100%;height: 250rpx;position: absolute;top: 0;left: 0;}
.top{width: 100%;height: 250rpx;display: flex;align-items: center;position: relative;z-index: 2;}
    .user-img{width: 120rpx;height: 120rpx;background-color: #fff;margin-left: 20rpx;border-radius: 50%;}
    .info{padding-left: 20rpx;flex: 1;}
        .name{display: block;font-size: 48rpx;line-height: 48rpx;color: #fff;padding-bottom: 15rpx;}
        .tips{width: 108rpx;height: 40rpx;border-radius: 20rpx;background-color: #FEEC49;font-size: 24rpx;color: #159F59;text-align: center;line-height: 40rpx;}
    .btn-set{margin-right: 42rpx;display: flex;flex-direction: column;justify-content: center;align-items: center;}
        .icon-set{width: 39rpx;height: 39rpx;}
        .s-txt{display: block;line-height: 40rpx;color: #fff;font-size: 22rpx;}
.con{width: 100%;padding: 0 20rpx;box-sizing: border-box;}
    .module{height: 130rpx;display: flex;align-items: center;}
        .m-tit{font-size: 40rpx;color: #003041;font-weight: bold;}
        .m-txt{font-size: 30rpx;color: #667176;flex: 1;text-align: right;padding-right: 9rpx;}
        .icon-in{width: 13rpx;height: 24rpx;}
    .wrap{display: flex;}
        .w-info{height: 150rpx;flex: 1;display: flex;flex-direction: column;text-align: center;justify-content: center;}
            .w-num{display: block;font-size: 48rpx;color: #06351D;line-height: 48rpx;font-weight: bold;}
            .w-txt{display: block;font-size: 30rpx;color: #667176;line-height: 30rpx;padding-top: 12rpx;}
    .item{height: 100rpx;display: flex;align-items: center;position: relative;}
        .icon-item{height: 34rpx;width: 34rpx;}
        .i-txt{flex: 1;padding-left: 10rpx;font-size: 34rpx;color: #667176;}
        .btn-share{position: absolute;top: 0;left: 0;width: 710rpx;height: 100rpx;opacity: 0;padding: 0;}
.logo{width: 103rpx;height: 47rpx;display: block;margin: 50rpx auto;}

    .w-wrap{position: relative;height: 261rpx;}
    .w-item{width:710rpx;height:250rpx;box-sizing: border-box;position: absolute;left: 0;}
    .w-img{width:750rpx;height:261rpx;position: absolute;top: 0;left: -20rpx;}
        .w-tit{font-size: 34rpx;color: #fff;position: absolute;top: 50rpx;z-index: 2;left: 40rpx;}
        .w-text{font-size: 48rpx;color: #fff;position: absolute;top: 110rpx;z-index: 2;left: 40rpx;}
