/**search.wxss**/
.f-box{position: relative;display: block;width: 100%;}
.top{width: 100%;height: 100rpx;padding:0 20rpx;display: flex;align-items: center;box-sizing: border-box;background-color: #58BDF4;position: relative;}
.top.on{background:linear-gradient(135deg,rgba(180,148,97,1),rgba(229,201,153,1));
}
    .search{flex: 1;background-color: rgba(255,255,255,0.7);height: 60rpx;border-radius: 30rpx;display: flex;align-items: center;}
        .icon-search{width: 28rpx;height: 28rpx;margin-left: 30rpx;}
        .search-txt{width: 100%;padding: 0 30rpx 0 15rpx; box-sizing: border-box;flex: 1;color: #00A9E4;font-size: 28rpx;}
        .search-txt.on{color: #B69259;}
        .p-c{color: #00A9E4;}
        .p-b{color: #B69259;}
        .s-txt{color: #F7FFFB;font-size: 34rpx;padding-left: 21rpx;}
        .btn-search{position: absolute;right: 20rpx;top: 20rpx;width: 80rpx;height: 60rpx;opacity: 0;}

.wrap{padding: 40rpx 20rpx 0 20rpx;position: relative;}
    .tit{font-size: 26rpx;color: #667176;}
    .tags{display: flex;padding: 20rpx 0;flex-wrap: wrap;}
        .tag{margin: 0 20rpx 20rpx 0;width: 180rpx;height: 60rpx;border-radius: 30rpx;font-size: 30rpx;color: #003041;text-align: center;line-height: 60rpx;background-color: #F3F3F3;}
    .bb-1{border-bottom:1rpx solid #EEEEEE;}
    .c-a{color: #667176;}
    .icon-del{width: 30rpx;height: 30rpx;padding: 10rpx;position: absolute;top: 38rpx;right: 20rpx;}
.empty-txt{line-height: 60rpx;font-size: 25rpx;color: #667176;text-align: center;}

