/**detail.wxss**/
.banner{width: 750rpx;height: 264rpx;position: absolute;top: 0;left: 0;background-color: #eee;}
.wrap{position: relative;z-index: 2;width: 710rpx;margin:273rpx auto 0 auto;background-color: #fff;box-shadow: 0px 5px 15px 0px rgba(0,0,0,0.15);padding-bottom: 110rpx;}
    .t-wrap,.b-wrap{width: 100%;height: 20rpx;position: absolute;left: 0;z-index: 3;}
    .t-wrap{top: -18rpx;}
    .b-wrap{bottom: -18rpx;}
    .con{padding: 0 20rpx;}
        .con-info{height: 353rpx;text-align: center;}
            .c-title{font-size: 34rpx;color: #667176;padding-top: 31rpx;}
            .c-txt{font-size: 48rpx;color: #FF2D51;padding-top: 30rpx;}
            .btn-get,.btn-use,.btn-got,.btn-getvip{width:500rpx;height:80rpx;border-radius: 4rpx;margin: 50rpx auto 0 auto;font-size: 36rpx;color: #fff;line-height: 80rpx;}
            .btn-get{background:linear-gradient(135deg,rgba(255,45,81,1),rgba(255,89,137,1));box-shadow: 0rpx 5rpx 15rpx 0rpx rgba(255,46,83,0.4);}
            .btn-use{background:rgba(88,189,244,1);box-shadow: 0rpx 5rpx 15rpx 0rpx rgba(88,189,244,0.4);}
            .btn-got{background:rgba(198,198,198,1);}
            .btn-getvip{background:linear-gradient(135deg,rgba(180,148,97,1),rgba(229,201,153,1));
box-shadow: 0rpx 5rpx 15rpx 0rpx rgba(203,173,123,0.39);}

            .c-time{color: #667176;font-size: 26rpx;padding-top: 30rpx;}

        .wrap-a{padding: 38rpx 0 30rpx 0;border-bottom: 1rpx dotted #58BDF4;}
            .tit-box{height: 58rpx;align-items: center;display: flex;}
                .tit-tip{width: 6rpx;height: 30rpx;border-radius: 3rpx;background-color: #003041;}
                .tit-txt{color: #003041;padding-left: 10rpx;font-size: 34rpx;flex: 1;font-weight: bold;}
                .tit-tip.on{background-color: #B69259;}
                .tit-txt.on{color: #B69259;}
                .tit-dis{color: #667176;font-size: 26rpx;padding-right: 20rpx;}
                .icon-in{width: 13rpx;height: 24rpx;}
            .w-introl{font-size: 30rpx;line-height: 44rpx;padding-top: 12rpx;color: #667176;}
            .w-imgs{padding-top: 20rpx;display: flex;flex-wrap: wrap;}
                .w-img{width: 200rpx;height: 200rpx;background-color: #eee;margin: 0 11rpx 10rpx 11rpx;}
.pb-40{padding-bottom: 40rpx;}
button{padding: 0;overflow: visible;}

.mask{width:100%;height:1110rpx;background:rgba(0,0,0,0.8);position:fixed;left:0;top:0;z-index:1}
.mask .yuan{width:100%;position:absolute;left:0;right:0;top:0;bottom:0;margin:auto;}
.mask{width:100%;height:100%;background:rgba(0,0,0,0.8);position:fixed;left:0;top:0;z-index:2}
.mask .banner-bg{position:absolute;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);top: 50%; left: 50%;margin:auto;width:100%;height:100%;}
.swiper image.yuan{width:100%;}

.btn-fix{width: 100%;height: 90rpx;line-height: 90rpx;text-align: center;color: #fff;font-size: 38rpx;position: fixed;bottom: 0;left: 0;z-index: 2;background:linear-gradient(135deg,rgba(180,148,97,1),rgba(229,201,153,1));}
    