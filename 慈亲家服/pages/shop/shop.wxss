/* pages/shop/shop.wxss */
.container{
  padding-bottom:200rpx;
}
.car-box{
  width:100%;
  overflow:hidden;
}
.car-list{
  width:840rpx;
  height:220rpx;
  padding:20rpx 30rpx;
  background:#fff;
  border-top:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
  position:relative;
  margin-top:20rpx;
  transition: all 0.5s linear;
}
.car-list.actives{
  transform: translate(-150rpx);
}
.car-choose{
  width:80rpx;
  float:left;
  height:100%;
}
.car-choose icon{
  margin-top:70rpx;
}
.car-info{
  width:600rpx;
  float:left;
  height:220rpx;
  overflow:hidden;
}
.car-info .car-fl{
  width:330rpx;
  height:220rpx;
  float:left;
  border-radius:6rpx;
}
.car-info .car-fl .car-img{
  width:100%;
  height:100%;
  border-radius:6rpx;
}
.car-info .car-fr{
  width:250rpx;
  height:180rpx;
  padding:20rpx 0;
  float:left;
  margin-left:20rpx;
  position:relative;
}
.car-info .car-fr .car-name{
  font-size:28rpx;
  color:rgb(55,54,52);
  display:block;
  margin-bottom:20rpx;
}
.car-info .car-fr .car-money{
  font-size:26rpx;
  color:rgb(254,1,55);
  display:block;
}
.car-info .car-fr .car-num{
  font-size:26rpx;
  color:rgb(177,174,171);
  display:block;
  text-align:right;
  position: absolute;
  right:0;
  bottom:0;
}
.car-del{
  width:150rpx;
  height:100%;
  float:left;
}
.car-del .del-icon{
  width:44rpx;
  height:50rpx;
  display:block;
  margin:0 auto;
  margin-top:100rpx;
}
.car-del .del-text{
  font-size:26rpx;
  color:rgb(254,1,55);
  display:block;
  text-align:center;
}
/*===========购物车=============*/
.shops{
  width:100%;
  height:198rpx;
  overflow:hidden;
  position:fixed;
  left:0;
  bottom:0;
}
/* =积分= */
.fen{
  width:100%;
  height:98rpx;
  border-top:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
  overflow:hidden;
  background:#fff;
}
.fens{
  width:463rpx;
  height:50rpx;
  float:left;
  position:relative;
  background:#f7f7f7;
  border-radius:6rpx;
  overflow:hidden;
  margin-left:30rpx;
  margin-top:25rpx;
}
.fens input{
  width:293rpx;
  padding-left:170rpx;
  background:#f7f7f7;
  height:50rpx;
  font-size:30rpx;
  color:rgb(177,174,171);
  position:absolute;
  left:0;
}
.fens .shi-fen{
  font-size:30rpx;
  color:rgb(177,174,171);
  position:absolute;
  left:13rpx;
  display:block;
  line-height:50rpx;
}
.choose{
  float:right;
  margin-top:20rpx;
}
.shopss{
  width:100%;
  height:100rpx;
  overflow:hidden;
  position:absolute;
  bottom:0;
  border-top:1rpx solid #eee;
}
.shops-fl{
  width:550rpx;
  height:100%;
  background:#fff;
  float:left;
}
.shops-fl .shops-number{
  width:300rpx;
  height:100rpx;
  margin-left:30rpx;
  float:left;
  margin-right:50rpx;
  font-size:28rpx;
  color:rgb(255,158,31);
  text-align:center;
  line-height:100rpx;
}
.fu-money{
  color:rgb(250,0,43);
  font-size:28rpx;
}
.shops-fl .shops-money{
  overflow:hidden;
  float:left;
}
.shops-fr .shops-money .fu{
  height:100rpx;
  line-height:100rpx;
  margin-left:20rpx;
}
.shops-money image{
  width:35rpx;
  height:35rpx;
  display:block;
  float:right;
  margin-top:35rpx;
  margin-right:20rpx;
}

.shops-fr{
  width:200rpx;
  height:100%;
  background:rgb(255,158,31);
  float:right;
  font-size:36rpx;
  color:#fff;
  text-align:center;
  line-height:100rpx;
  overflow:hidden;
}
.shops-choose{
  height:100%;
  float:left;
  font-size:36rpx;
  color:rgb(255,158,31);
  text-align:center;
  line-height:100rpx;
  margin-left:30rpx;
}
.shops-choose .all{
  display:block;
  margin-top:0;
  float:left;
  line-height:100rpx;
}
.shops-choose icon{
  float:left;
  display:block;
  line-height:145rpx;
  margin-right:10rpx;
}