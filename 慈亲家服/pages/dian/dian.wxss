@import "../template/template.wxss";
.dian-search{
  width:100%;
  height:90rpx;
  background:#fff;
  position:relative;
}
.dian-search input{
  display:block;
  width:690rpx;
  height:60rpx;
  background:#f7f7f7;
  border-radius:50rpx;
  font-size:30rpx;
  color:rgb(177,174,174);
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  margin:auto;
  text-align:center;
}
.dian-search icon{
  position: absolute;
  right:60rpx;
  top:25rpx;
  z-index:1
}
.dian-search .sous{
  position: absolute;
  right:60rpx;
  top:25rpx;
  z-index:2;
  width:50rpx;
  height:50rpx;
}
/*==========店铺banner========  */
.dian_banner{
  width:100%;
  height:300rpx;
  position:relative;
}
.dian_banner .dian-bg{
  width:100%;
  height:300rpx;
  position:absolute;
}
.dian_banner .dian-message{
  width:690rpx;
  height:120rpx;
  padding:0 30rpx;
  position:absolute;
  left:0;
  bottom:30rpx;
}
.dian-message .dian-logo{
  width:120rpx;
  height:120rpx;
  border-radius:6rpx;
  float:left;
  margin-right:20rpx;
}
.dian-message .dian-text{
  float:left;
  height:80rpx;
  padding:20rpx 0;
  display:flex;
  justify-content:space-between;
  flex-direction:column;
}
.dian-message .dian-text .dian-name{
  font-size:36rpx;
  color:#fff;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dian-text .dian-ping{
   overflow:hidden;
}
.dian-text .dian-ping .xing{
  width:34rpx;
  height:30rpx;
  float:left;
  margin-right:5rpx;
}
.choe-list.actives .time{
  color:rgb(255,158,31);
}