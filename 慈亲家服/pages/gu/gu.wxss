@import "../template/template.wxss";
/* ========搜索=========*/
.container{
  padding-top:150rpx;
}
.search-box{
  width:100%;
  height:150rpx;
  background:#3DC451;
  position: fixed;
  top:0;
  left:0;
  z-index:2
}
.search-box .search{
  width:640rpx;
  height:50rpx;
  padding:20rpx 25rpx;
  background:#fff;
  border-radius:6rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  box-shadow: 0 10rpx 20rpx rgba(0,106,15,0.2);
}
.search-box .search image{
  width:57rpx;
  height:50rpx;
  float:left;
  display:block;
  margin-right:20rpx;
}
.search-box .search  .border{
  width:4rpx;
  height:36rpx;
  background:#3DC451;
  margin-top:8rpx;
  float:left;
}
.search-box .search input{
  width:400rpx;
  height:50rpx;
  float:left;
  display:block;
  padding-left:10rpx;
  font-size:36rpx;
  color:rgb(177, 174, 171);
}
.search-box .search button{
  height:50rpx;
  width:80rpx;
  float:right;
  display:block;
  background:none;
  border:none;
  padding:0;
  margin:0;
  line-height:50rpx;
  font-size:36rpx;
  color:#3DC451;
  font-weight:bold;
}
button:after{
  border:none;
}
/* ========导航=========*/
.nav{
  width:100%;
  background:#fff;
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
}
.time-box{
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.2);
  padding:20rpx 0;
  background:#fff;
}
.time-box .time-list{
  background:#fff;
  height:60rpx;
  line-height:60rpx;
}
.time-box .date{
  font-size:28rpx;
  color:rgb(55,54,52);
  line-height:60rpx;
}
.time-box .time-picker{
  font-size:28rpx;
  line-height:60rpx;
}