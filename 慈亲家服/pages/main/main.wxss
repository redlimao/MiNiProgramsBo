@import "../template/template.wxss";
.main-box{
  width:100%;
  height:330rpx;
  position:relative;
}
/* ========个人信息==-=== */
.main-box .box{
  width:100%;
  height:150rpx;
  background: rgb(255,158,31);
  position:absolute;
  left:0;
  top:0;
}
.main-box .main{
  width:690rpx;
  height:280rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:25rpx;
  background:#fff;
  border-radius:6rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
}
.main .main-message{
  width:100%;
  height:120rpx;
  border-bottom:1rpx solid #eee;
  padding:20rpx 0;
  overflow:hidden;
}
.main-message .main-photo{
  width:120rpx;
  height:120rpx;
  background:#fff;
  border-radius:50%;
  box-shadow: 0 0 20px rgba(0,0,0,0.05);
  position:relative;
  margin-left:20rpx;
  margin-right:10rpx;
  float:left;
}
.main-message .main-photo .main-img{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.main-message .main-name{
  font-size:30rpx;
  color:rgb(55,54,52);
  line-height:120rpx;
  margin-right:20rpx;
  float:left;
  overflow:hidden;
}
.main-message .er{
  width:30rpx;
  height:120rpx;
  position:relative;
  float:left;
}
.main-message .er .er-icon{
  width:30rpx;
  height:30rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.main-message .main-main{
  float:right;
  margin-right:20rpx;
}
.main-message .main-main .card-icon{
  width:31rpx;
  height:22rpx;
  display:block;
  float:left;
  margin-top:50rpx;
  margin-right:10rpx;
}
.main-message .main-main .main-choose{
  font-size:26rpx;
  color:rgb(254,1,55);
  line-height:120rpx;
  display:block;
  float:left;
}
/* 主家 */
.card{
  width:180rpx;
  height:50rpx;
  background: -webkit-linear-gradient(left top, #ff9e1f , #ffcd42);
  background: -moz-linear-gradient(left top, #ff9e1f , #ffcd42);
  color:#fff;
  font-size:26rpx;
  float:right;
  margin-top:35rpx;
  text-align:center;
  line-height:50rpx;
  border-top-left-radius:50rpx;
  border-bottom-left-radius: 50rpx;
}
/* 商家 */
.shang{
  background: -webkit-linear-gradient(left top, #2495fc , #4ac7fe);
  background: -moz-linear-gradient(left top, #2495fc , #4ac7fe)
}
/* 家服 */
.jiafu{
  width:180rpx;
  height:50rpx;
  background: -webkit-linear-gradient(left top, #3dc451 , #70e489);
  background: -moz-linear-gradient(left top, #3dc451 , #70e489)
}
/* 公司 */
.gong{
  background: -webkit-linear-gradient(left top, #02AAB0, #00CDAC);
  background: -moz-linear-gradient(left top, #ff1a1a , #ffcccc)
}
/* ==需求== */
.main-xu{
  width:100%;
  height:80rpx;
  padding:20rpx 0;
  display:flex;
  justify-content:space-around;
}
.xu-list{
  display:flex;
  justify-content:space-between;
  flex-direction: column;
}
.xu-list .list-zhi{
  color:rgb(255,158,31);
  font-size:36rpx;
  text-align:center;
  font-weight:bold;
}
.xu-list .list-name{
  color:rgb(55,54,52);
  font-size:30rpx;
  text-align:center;
}
/* 商家 */
.xu-list .shang-zhi{
  color:#2495fc;
}
/* 家服 */
.xu-list .jiafu-zhi{
  color:#3dc451;
}
 /* 公司 */
.xu-list .gong-zhi{
  color:rgb(2,170,176);
 }
/* ========订单======= */
.main-order{
  width:690rpx;
  margin:0 auto;
  background:#fff;
  border-radius:6rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
  margin-bottom:30rpx;
}
.order-title{
  width:650rpx;
  padding:0 20rpx;
  height:80rpx;
  display:flex;
  justify-content:space-between;
  border-bottom:1rpx solid #eee;
}
.order-title .title-text{
  font-size:30rpx;
  color:rgb(55,54,52);
  line-height:80rpx;
}
.order-title .look-more{
  font-size:26rpx;
  color:rgb(175,174,171);
  line-height:80rpx;
}
.order-box{
  width:100%;
  padding:10rpx 0;
  display:flex;
  justify-content:space-between;
  position:relative;
  flex-wrap: wrap;
}
.order-list{
  display:flex;
  justify-content:space-around;
  flex-direction: column;
  
  height: 100rpx;
  
}
.order-box.in .order-list{width:162rpx;margin-bottom: 40rpx;}

/* ======主家====== */
.main-zhu{
  padding:40rpx 20rpx 0 20rpx;
  background:#fff;
  border-radius:6rpx;
  width:650rpx;
  margin:0 auto;
  margin-bottom:30rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
}
.address{
  width:150rpx;
  height:120rpx;
  position:absolute;
  left:0;
  top:140rpx;
}
.about{
  width:100%;
  text-align:center;
  font-size:26rpx;
  color:rgb(175,174,171);
  padding-top: 60rpx;
}