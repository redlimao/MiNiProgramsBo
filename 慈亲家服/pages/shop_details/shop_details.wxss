@import "../template/template.wxss";
/* =============商品信息============ */
.container{
  padding-bottom:100rpx;
}
.shop-message{
  width:100%;
}
swiper{
   height:500rpx;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:60rpx;
    display: inline-flex;
    height: 6rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:#fff;    
}
.shop-message .shopde-img{
  width:100%;
  height:500rpx;
  display:block;
}
.shop-message .shop-names{
  width:690rpx;
  height:90rpx;
  background:#fff;
  padding:0 30rpx;
  display:flex;
  justify-content:space-between;
}
.shop-message .shop-names .shop-name{
  width:80%;
  font-size:30rpx;
  display:block;
  color:rgb(55, 54, 52);
  line-height:90rpx;
  overflow:hidden;
}
.share{
  width:20%;
  height:100%;
  position: relative;
}
.share .share-icon{
  width:33rpx;
  height:30rpx;
  display:block;
  margin:0 auto;
  margin-top:15rpx;
  margin-bottom:5rpx;
}
.share .share-text{
  display:block;
  color:rgb(177,174,171);
  font-size:22rpx;
  text-align:center;
}
button{
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
}
button:after{
  border:none;
}
/* =============商品详情，评论============ */
.shop-inner{
  width:100%;
  background:#fff;
  margin-top:20rpx;
}
.shop-inner .shopInner-nav{
  width:100%;
  height:90rpx;
  border-bottom:1rpx solid #eee;
  border-top:1rpx solid #eee;
  display:flex;
  justify-content:space-around;
}
.shopInner-nav .shopInner-name{
  display:block;
  font-size:30rpx;
  color:rgb(55, 54, 52);
  line-height:90rpx;
  box-sizing: border-box;
}
.shopInner-nav .shopInner-name.actives{
  color:rgb(255,158,31);
  border-bottom:6rpx solid rgb(255,158,31);
}
.ben{
  width:690rpx;
  padding:30rpx;
}
.right-item{ 
 display: none; 
} 
 .right-item.actives{ 
 display: block; 
}
/* =============购买导航============ */
.buy-nav{
  width:100%;
  height:100rpx;
  position:fixed;
  bottom:0;
  left:0;
  display:flex;
  border-top:1rpx solid #eee;
  background:#fff;
}
.buy-nav .buy-list{
  flex-grow: 1;
  border-right:1rpx solid #eee;
}
.buy-nav .buy-list .buy-icon{
  width:40rpx;
  height:40rpx;
  display:block;
  margin:0 auto;
  margin-top:10rpx;
  margin-bottom:6rpx;
}
.buy-nav .buy-list .buy-text{
  display:block;
  text-align:center;
  color:rgb(255,158,31);
  font-size:24rpx;
}
.buy-nav .buy-list .buy-texts{
  color:rgb(177,174,171);
}
.buy-nav .buy-list .buy-textss{
  color:rgb(255,1,43);
}
.buy-nav .buy-order{
  width:358rpx;
  line-height:98rpx;
  text-align:center;
  background:rgb(255,158,31);
}
.buy-nav .buy-order .fu-money{
  display:block;
  width:100%;
  height:49rpx;
  line-height:50rpx;
  color:#fff;
  font-size:30rpx;
}
.buy-nav .buy-order .fu-ti{
  display:block;
  width:100%;
  height:49rpx;
  line-height:40rpx;
  color:#fff;
  font-size:24rpx;
}
/* =============下单框============ */
.dan-box{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  background:rgba(0,0,0,0.7);
}
.dan-box .dan{
  width:100%;
  background:#fff;
  position:absolute;
  bottom:0;
  left:0;
}
/* =基础信息= */
.dan .dan-message{
  width:690rpx;
  height:120rpx;
  position:relative;
  margin-bottom:40rpx;
  padding:0 30rpx;
}
.dan .dan-message .dan-img{
  width:330rpx;
  height:220rpx;
  position:absolute;
  top:-100rpx;
  left:30rpx;
  border-radius:6rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
  overflow:hidden;
}
.dan .dan-message .dan-imgs{
  width:330rpx;
  height:220rpx;
}
.dan .dan-message .dan-jia{
  margin-left:350rpx;
  height:100rpx;
  padding-top:20rpx;
  float:left;
  width:280rpx;
}
.dan-message .dan-jia .dan-money{
  font-size:48rpx;
  color:rgb(254,1,55);
  display:block;
  font-weight:bold;
}
.dan-message .dan-jia .dan-name{
  font-size:30rpx;
  color:rgb(55,54,52);
  display:block;
}
.close{
  float:right;
  margin-top:20rpx;
}
.close image{
  width:45rpx;
  height:45rpx;
}
/* =规格= */
.gui{
  width:690rpx;
  padding:0 30rpx;
  margin-bottom:20rpx;
}
.gui .gui-title{
  display:block;
  font-size:30rpx;
  color:rgb(177,174,171);
  margin-bottom:20rpx;
}
.gui .gui-box{
  width:100%;
  overflow:hidden;
}
.gui .gui-box .gui-list{
  height:40rpx;
  padding:0 20rpx;
  border:2rpx solid rgb(177,174,171);
  border-radius:6rpx;
  text-align:center;
  line-height:40rpx;
  font-size:26rpx;
  color:rgb(177,174,171);
  float:left;
  margin-right:20rpx;
  margin-bottom:20rpx;
}
.gui .gui-box .gui-list.actives{
  color:rgb(255,158,31);
  border:2rpx solid rgb(255,158,31);
}
/* =数量= */
.dan-num{
  width:690rpx;
  padding:0 30rpx;
  margin-bottom:40rpx;
}
.dan-num .num-title{
  display:block;
  font-size:30rpx;
  color:rgb(177,174,171);
  margin-bottom:20rpx;
}
.dan-num .num-box{
  overflow:hidden;
}
.dan-num .jian{
  background:#fff;
  color:rgb(177,174,171);
  border:2rpx solid rgb(177,174,171);
  display:block;
  float:left;
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  font-size:24rpx;
  padding:0;
  line-height:50rpx;
  text-align:center;
}
.dan-num .jia{
  background:rgb(255,158,31);
  color:#fff;
  margin-left:20rpx;
  display:block;
  float:left;
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  font-size:24rpx;
  padding:0;
  line-height:50rpx;
  text-align:center;
  margin-right:30rpx;
}
.dan-num .dan-number{
  display:block;
  float:left;
  height:50rpx;
  border:none;
  font-size:42rpx;
  color:rgb(255,158,31);
  text-align:cetner;
  line-height:50rpx;
  padding-left:20rpx;
}
/* =积分= */
.fen{
  width:100%;
  height:98rpx;
  border-top:1rpx solid #eee;
  overflow:hidden;
}
.fens{
  width:463rpx;
  height:50rpx;
  float:left;
  position:relative;
  background:#f7f7f7;
  border-radius:6rpx;
  overflow:hidden;
  margin-left:30rpx;
  margin-top:25rpx;
}
.fens input{
  width:293rpx;
  padding-left:170rpx;
  background:#f7f7f7;
  height:50rpx;
  font-size:30rpx;
  color:rgb(177,174,171);
  position:absolute;
  left:0;
}
.fens .shi-fen{
  font-size:30rpx;
  color:rgb(177,174,171);
  position:absolute;
  left:13rpx;
  display:block;
  line-height:50rpx;
}
.choose{
  float:right;
  margin-top:20rpx;
}
.zhi{
  width:100%;
  height:100rpx;
  background:rgb(255,158,31);
  color:#fff;
  text-align:center;
  line-height:100rpx;
  font-size:36rpx;
}