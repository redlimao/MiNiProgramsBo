.p-wrap{width: 100%;padding: 10rpx 30rpx 50rpx 30rpx;box-sizing: border-box;background-color: #fff;}
    .p-item{display: flex;height: 110rpx;width: 100%;align-items: center;}
        .p-txt{color: #373634;font-size: 30rpx;font-weight: bold;padding-right: 60rpx;}
        .p-stars{display: flex;position: relative;}
            .star-grey{height: 54rpx;width: 54rpx;margin-right: 13rpx;display: block;}
            .star1,.star2,.star3,.star4,.star5{position: absolute;top: 0;left: 0;height: 54rpx;width: 54rpx;display: none;}
            .star2{left: 67rpx;}
            .star3{left: 133rpx;}
            .star4{left: 199rpx;}
            .star5{left: 265rpx;}
            .star1.on,.star2.on,.star3.on,.star4.on,.star5.on{display: block;z-index: 2;}
        .p-txts{font-size: 30rpx;color: #FF9E1F;padding-left: 17rpx;}

.m-wrap{margin-top: 30rpx;background-color: #fff;width: 100%;padding: 0 30rpx;box-sizing: border-box;}
    .m-tit{line-height: 118rpx;text-align: center;font-size: 36rpx;color: #2B2B2B;font-weight: bold;}
    .tags{padding: 15rpx 0;display:flex;justify-content: space-between;}
        .t-item{width:180rpx;height:80rpx; border-radius: 8rpx ; border: 2rpx solid #B1AEAB;box-sizing: border-box;font-size: 36rpx;color: #B1AEAB;background-color: transparent;text-align: center;line-height: 80rpx;}
        .t-item.on{border: 2rpx solid #FA9A1E;color: #fff;background-color: #FA9A1E;}
    .btn-in{height: 116rpx;line-height: 116rpx;text-align: center;font-size: 30rpx;color: #0063C9;}

.btn-submit{width:670rpx;height:94rpx; background:#FF9E1F;border-radius: 10rpx;margin: 167rpx auto;font-size: 36rpx;color: #FFFFFF;text-align: center;line-height: 94rpx;}
/* 弹窗 */
.bg-fix{width: 100%;height: 100%;background-color: rgba(0,0,0,0.5);position: fixed;z-index: 3;top: 0;left: 0;display: none;}
.bg-fix.on,.bg-view.on{display: block;}
.bg-view{width: 560rpx;height: 500rpx;border-radius: 20rpx;background-color: #fff;position: absolute;z-index: 4;top: 50%;left: 50%;transform: translate(-50%,-50%);text-align: center;display: none;}
    .v-tit{padding-top:68rpx;font-size: 44rpx;color: #494647;font-weight: bold;line-height: 98rpx;}
    .v-box{height: 108rpx;display: flex;justify-content: center;align-items: center;}
        .btn-num{width: 48rpx;height: 48rpx;text-align: center;line-height: 40rpx;color: #ADA6A8;font-size: 60rpx;}
        .btn-num.on{color: #FC9C20;}
        .v-input{width: 209rpx;font-size: 48rpx;color: #FB9B1F;text-align: center;}
    .btn-on{margin: 0 auto;margin-top: 70rpx;width: 400rpx;height: 70rpx;text-align: center;line-height: 70rpx;color: #ffffff;background-color: #FC9C20;font-size: 30rpx;border-radius: 10rpx;}
    .v-txt{padding-top: 37rpx;font-size: 22rpx;color: #B9B6AF;}
    .btn-close{width: 60rpx;height: 60rpx;position: absolute;left: 50%;transform: translate(-50%,0);bottom:-103rpx;}