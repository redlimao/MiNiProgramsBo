/* pages/ation/ation.wxss */
.top{
  width:100%;
  height:400rpx;
  overflow:hidden;
}
.top image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  margin:0 auto;
  margin-top:70rpx;
  margin-bottom:10rpx;
  display:block;
}
.top .top-text{
  width:100%;
  display:block;
  text-align:center;
  font-size:32rpx;
  color:rgb(55,54,52);
  margin-bottom:20rpx;
}
.bottom{
  overflow:hidden;
}
.chuan-box{
  width:100%;
  height:500rpx;
  overflow:hidden;
}
.chuan-box .chuan{
  margin:30rpx;
  border:2rpx dashed rgb(177,174,171);
  height:440rpx;
  width:690rpx;
  background:#fff;
}
.chuan-box .chuan image{
  width:76rpx;
  height:76rpx;
  margin:0 auto;
  margin-top:105rpx;
  display:block;
  margin-bottom:50rpx;
}
.chuan-box .chuan .chuan-text{
  display:block;
  width:100%;
  text-align:center;
  font-size:32rpx;
  color:#b1b1b1;
}
.chuan-box .chuan .chuan-text .style{
  color:#ff9a0e;
}
.chuan-box .chuan .chuan-tu{
  width:100%;
  height:100%;
  margin:0;
}
.sub{
  width:690rpx;
  height:100rpx;
  margin:0 auto;
  text-align:center;
  line-height:100rpx;
  color:#fff;
  font-size:32rpx;
  background:#dbdbdb;
  margin-top:100rpx;
}
.subs{
  width:690rpx;
  height:100rpx;
  margin:0 auto;
  text-align:center;
  line-height:100rpx;
  color:#fff;
  font-size:32rpx;
  background:rgb(255,158,31);
  margin-top:100rpx;
}