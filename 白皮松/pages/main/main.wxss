@import "../template/template.wxss";
.container-b{padding-bottom: 100rpx;}
.main-box{
  width:100%;
  height:330rpx;
  position:relative;
}
/* ========个人信息==-=== */
.main-box .box{
  width:100%;
  height:213rpx;
  background:#24b24b;
  position:absolute;
  left:0;
  top:0;
}
.main-box .main{
  width:690rpx;
  height:225rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:100rpx;
  background:#fff;
  border-radius:6rpx;
  box-shadow: 0 5rpx 8px rgba(181,181,181,0.12);
}
.main .main-message{
  width:100%;
  height:120rpx;
  border-bottom:1rpx solid #eee;
  padding:0 20rpx;
  position: relative;
}
.txt-x{
    position: absolute;
    width:140rpx;
    height:56rpx;
    line-height:56rpx;
    text-align:center;
    color:#fff;
    background:#22d453;
    font-size:26rpx;
    border-radius:28rpx 0 0 28rpx;
    right: 0;
    top: 20rpx;
}
.main-message .main-photo{
  width:130rpx;
  height:130rpx;
  background:#fff;
  border:4rpx solid #fff;
  border-radius:50%;
  box-shadow: 1rpx 1rpx 5rpx rgba(0,0,0,0.15);
  position:absolute;
  left: 37rpx;
  top: -55rpx;
}
.main-message .main-photo .main-img{
  width:122rpx;
  height:122rpx;
  border-radius:50%;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.main-message .main-name{
  font-size:34rpx;
  color:rgb(55,54,52);
  line-height:80rpx;
  padding-left:170rpx; 
}
.main-message .er{
  width:30rpx;
  height:120rpx;
  position:relative;
  float:left;
}
.main-message .er .er-icon{
  width:30rpx;
  height:30rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.main-message .main-main{
  float:right;
  margin-right:20rpx;
}
.main-message .main-main .card-icon{
  width:31rpx;
  height:22rpx;
  display:block;
  float:left;
  margin-top:50rpx;
  margin-right:10rpx;
}
.main-message .main-main .main-choose{
  font-size:26rpx;
  color:rgb(254,1,55);
  line-height:120rpx;
  display:block;
  float:left;
}
/* 主家 */
.card{
  width:180rpx;
  height:50rpx;
  background:linear-gradient(45deg, #41b9ad,#76ddd6);
  background:-webkit-linear-gradient(45deg, #41b9ad,#76ddd6);
  background:-moz-linear-gradient(45deg, #41b9ad,#76ddd6);
  color:#fff;
  font-size:26rpx;
  float:right;
  margin-top:35rpx;
  text-align:center;
  line-height:50rpx;
  border-top-left-radius:50rpx;
  border-bottom-left-radius: 50rpx;
}
/* 商家 */
.shang{
  background: -webkit-linear-gradient(left top, #2495fc , #4ac7fe);
  background: -moz-linear-gradient(left top, #2495fc , #4ac7fe)
}
/* 家服 */
.jiafu{
  width:180rpx;
  height:50rpx;
  background: -webkit-linear-gradient(left top, #3dc451 , #70e489);
  background: -moz-linear-gradient(left top, #3dc451 , #70e489)
}
/* ==需求== */
.main-xu{
  width:100%;
  height:113rpx;
  padding:30rpx 0;
  display:flex;
  justify-content:space-around;
}
.xu-list{
  display:flex;
  align-items: center;
}
.img-a{width: 44rpx;height: 44rpx;}
.img-b{width: 44rpx;height: 44rpx;}
.line{height: 54rpx;width: 2rpx;background-color: #e8e8e8;}
.user-lists{margin-top: 16rpx;background-color: #fff;padding: 0 24rpx;}
	.user-list{border-top:1rpx solid rgb(238,238,238);display:flex;align-items: center;height: 90rpx;}
		.user-list-icon{width: 36rpx;height: 36rpx;}
		.user-list-txt{font-size: 30rpx;color: rgb(102,102,102);margin-left: 20rpx;flex: 1;}
		.user-list-in{width: 14rpx;height: 24rpx;}
    .user-list.pr{position: relative;}
        .user-list button{width: 100%;height:88rpx;top: 0;left: 0;z-index: 3;position: absolute;opacity: 0;}

.xu-list .list-zhi{
  color:#41b9ad;
  font-size:36rpx;
  text-align:center;
  font-weight:bold;
}
.xu-list .list-name{
  color:rgb(102,102,102);
  font-size:30rpx;
  padding-left: 20rpx;
}
/* 商家 */
.xu-list .shang-zhi{
  color:#2495fc;
}
/* 家服 */
.xu-list .jiafu-zhi{
  color:#3dc451;
}
/* ========订单======= */
.main-order{
margin-top:20rpx; 
  background:#fff;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
  padding: 0 24rpx;
}
.order-title{
  height:80rpx;
  display:flex;
  justify-content:space-between;
  align-items: center;
  border-bottom:1rpx solid #eee;
}
.order-title .title-text{
  font-size:30rpx;
  color:rgb(55,54,52);
  line-height:80rpx;
}
.order-title .look-more{
  font-size:28rpx;
  color:rgb(175,174,171);
  line-height:80rpx;
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}
.order-box{
  width:100%;
  padding:32rpx 0 26rpx 0;
  display:flex;
  justify-content:space-around;
  position:relative;
  flex-wrap: wrap;
}
.order-list{
  display:flex;
  justify-content:space-around;
  flex-direction: column;
  width:120rpx;
  height: 100rpx;
}
