  top:0;
}
.about{
  width:100%;
  text-align:center;
  font-size:26rpx;
  color:rgb(175,174,171);
  position:absolute;
  bottom:60rpx;
}
.bottom-txt{height:30rpx;margin-top: 20rpx;line-height:30rpx;color:rgb(177, 174, 171);font-size:24rpx;text-align:center;}