/*填写预约信息 */
.form-box{margin-top: 20rpx;padding: 0 20rpx 32rpx 20rpx;overflow: hidden;background-color: #fff;}
  .txt-a{height: 80rpx;line-height: 80rpx;font-size: 30rpx;color: rgb(102,102,102);}
  .input-box{padding: 0 14rpx;height: 86rpx;background-color: #f6f6f6;border-radius: 6rpx;line-height: 86rpx;font-size: 28rpx;color: rgb(173,175,173);}
  .input-box1{width: 690rpx;padding: 14rpx;background-color: #f6f6f6;border-radius: 6rpx;line-height: 86rpx;font-size: 28rpx;color: rgb(173,175,173);height: 160rpx;}
.select{height: 104rpx;padding: 0 24rpx; display: flex;align-items: center;}
  .select-txt{font-size: 26rpx;color: rgb(154,154,154);padding-left: 20rpx;}
  .read{padding-left: 40rpx;font-size: 26rpx;text-decoration: underline;color: #ff695b;}
  .money-txt{font-size: 30rpx;color: rgb(102, 102, 102);}
  .money{font-size: 32rpx;color:#f44444;}
  .btn-buy{position: absolute; margin: auto;left: 0;right: 0;bottom: 80rpx;width: 690rpx;height: 84rpx;border-radius: 10rpx;background-color: #ff695b;color: #ffffff;font-size: 32rpx;text-align: center;line-height: 84rpx;}
/* 弹窗 */
  .container-b{position:fixed;width: 100%;height: 100%;background-color: rgba(0,0,0,0.5);z-index: 2;top: 0;right: 0;display: none;}
.container-b.active{display: block;}
.title{line-height: 50rpx;font-size: 30rpx;text-align: center;}
.container-bg{position:fixed;left:50%;top:50%;width:600rpx;height: 800rpx;margin-top: -400rpx;margin-left: -300rpx;background:#fff;display: none;z-index: 3;padding: 24rpx;}
.container-bg.active{display: block;}
.content{height: 632rpx;}
.btn{width:200rpx;height:80rpx;line-height:80rpx;text-align:center;color:#fff;background:#f44444;font-size:34rpx;border-radius:5rpx;margin: 0 auto;}
