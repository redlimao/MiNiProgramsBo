/* pages/er/er.wxss */
/* ========个人信息==-=== */
.er-box{
  width:100%;
  height:950rpx;
  position:relative;
}
 .box{
  width:100%;
  height:150rpx;
  background: #41b9ad;
  position:absolute;
  left:0;
  top:0;
}
.er-box .er-img{
  width:690rpx;
  height:900rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:25rpx;
  background:#fff;
  border-radius:6rpx;
  box-shadow: 0 4rpx 20px rgba(0,0,0,0.05);
  overflow:hidden;
}
.er-box .er-img image{
  width:100%;
  height:100%;
}
.er-bot{
  width:100%;
  display:flex;
  justify-content:space-around;
  margin-top:50rpx;
}
.er-bot .keep{
  width:250rpx;
  height:80rpx;
  border-radius:6rpx;
  border:2rpx solid #41b9ad;
  text-align:center;
  line-height:80rpx;
  font-size:30rpx;
  color:#41b9ad;
}
.er-bot .share{
  width:250rpx;
  height:80rpx;
  border-radius:6rpx;
 background:#41b9ad;
  text-align:center;
  line-height:80rpx;
  font-size:30rpx;
  color:#fff;
  position: relative;
}
button{
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
}
button:after{
  border:none;
}