/* pages/quan/quan.wxss */
.container{
  padding-top:30rpx;
  padding-bottom:140rpx;
}
.juan-list{
  width:690rpx;
  height:200rpx;
  margin:0 auto;
  margin-bottom:30rpx;
  background:#fff;
  overflow:hidden;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  position:relative;
}
.juan-fl{
  width:66%;
  float:left;
  height:100%;
  padding-left:4%;
}
.juan-box{
  width:100%;
  height:150rpx;
}
.juan-money{
  font-size:48rpx;
  line-height:150rpx;
  margin-right:20rpx;
}
.juan-tiao{
  font-size:28rpx;
  line-height:150rpx;
}
.juan-time{
  font-size:26rpx;
  color:rgb(254,1,55);
}
.juan-fr{
  width:30%;
  float:left;
  background:#41b9ad;
  height:196rpx;
  overflow:hidden;
  margin-top:2rpx;
}
.juan-logo{
  width:100%;
  height:100%;
}
.title{
  font-size:14rpx;
  color:#fff;
  width:100%;
  display: block;
  margin-top:25rpx;
  text-align: center;
}
.choose{
  position:absolute;
  right:20rpx;
  top:20rpx;
}
.mask{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  background:rgba(255,255,255,0.8);
}
.ok{
  width:100%;
  height:120rpx;
  background:rgba(255,255,255,0.6);
  position:fixed;
  left:0;
  bottom:0;
  border-top:1rpx solid #eee;
}
.ok .que{
  width:650rpx;
  height:80rpx;
  border-radius:10rpx;
  background:linear-gradient(45deg, #26b4fc,#90d9ff);
  background:-webkit-linear-gradient(45deg, #26b4fc,#90d9ff);
  background:-moz-linear-gradient(45deg, #26b4fc,#90d9ff);
  text-align:center;
  line-height:80rpx;
  font-size:26rpx;
  color:#fff;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}