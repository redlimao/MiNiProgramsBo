/* pages/ceshi/ceshi.wxss */
.swiper{
  width:710rpx;
  height:960rpx;
  margin:0 auto;
  border-radius:4rpx;
  margin-top:20rpx;
}
.swiper swiper-item{
  width:710rpx;
  height:960rpx;
  background:#fff;
  margin:0 auto;
  border-radius:4rpx;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.question{
  width:630rpx;
  margin:0 auto;
  font-size:30rpx;
  color:#494647;
  font-weight:bold;
  margin-top:50rpx;
  margin-bottom:60rpx;
}
.answer{
  width:600rpx;
  margin:0 auto;
}
.answer .answer-list{
  width:100%;
  height:72rpx;
  overflow:hidden;
}
.answer-list .answer-text{
  display:block;
  float:left;
  line-height:72rpx;
  font-size:30rpx;
  color:#494647;
}
.answer-list icon{
  float:right;
  margin-top:25rpx;
}
.ti-choose{
  width:650rpx;
  margin:0 auto;
  overflow:hidden;
  margin-top:70rpx;
}
.prev{
  width:220rpx;
  height:60rpx;
  float:left;
  display:block;
  border:1rpx solid rgb(255,127,174);
  text-align:center;
  line-height:60rpx;
  font-size:30rpx;
  color:rgb(255,127,174);
  border-radius:4rpx;
}
.ti-num{
  float:left;
  margin-left:60rpx;
  font-size:36rpx;
  color:rgb(173,166,168);
  line-height:60rpx;
}
.ti-num .ti-active{
  color:rgb(73,70,71);
}
.next{
  width:220rpx;
  height:60rpx;
  float:right;
  display:block;
  background:rgb(255,127,174);
  text-align:center;
  line-height:60rpx;
  font-size:30rpx;
  color:#fff;
  border-radius:4rpx;
}