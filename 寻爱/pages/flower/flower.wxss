/* pages/xiao/xiao.wxss */
/* ======积分导航===== */
.nav{
  width:100%;
  height:90rpx;
  display: flex;
  justify-content:space-around;
  border-bottom:1rpx solid #eee;
  background:#fff;
  margin-bottom:20rpx;
}
.nav .nav-list{
  display:block;
  line-height:90rpx;
  font-size:30rpx;
  color:rgb(173,166,168);
}
.nav .nav-list.actives{
  color:rgb(255,127,174);
  border-bottom:8rpx solid rgb(255,127,174);
}
/* ====内容=== */
.list{
  width:750rpx;
  height:180rpx;
  padding:0 20rpx;
  overflow:hidden;
  border-top:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
  background:#fff;
  margin-bottom:20rpx;
}
.list-list{
  width:800rpx;
  height:180rpx;
}
.dels{
  animation:mymove 0.3s linear forwards;
  -moz-animation:mymove 0.3s linear forwards; /* Firefox */
  -webkit-animation:mymove 0.3s linear forwards; /* Safari and Chrome */
  -o-animation:mymove 0.3s linear forwards; /* Opera */
}
.photo-box{
  float:left;
  width:120rpx;
  overflow:hidden;
  margin-right:10rpx;
}
.photo-box .photo-icon{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  border:2rpx solid #fff;
  margin:0 auto;
  margin-top:40rpx;
  margin-left:10rpx;
}
.name-box{
  float:left;
  width:300rpx;
  height:80rpx;
  margin-top:50rpx;
  display:flex;
  justify-content:space-between;
  flex-direction: column;
}
.name-box .name{
  font-size:30rpx;
  color:rgb(73,70,71);
}
.name-box .hao{
  font-size:26rpx;
  color:rgb(173,166,168);
}
.time-box{
  width:270rpx;
  float:right;
  margin-right:20rpx;
  height:80rpx;
  margin-top:50rpx;
}
.time-box .time{
  display:block;
  font-size:26rpx;
  color:rgb(173,166,168);
  line-height:80rpx;
  margin-bottom:30rpx;
  text-align:center;
}
.del-box{
  width:50rpx;
  float:right;
}
.del-box icon{
  margin-top:80rpx;
}


/* ==删除消息== */
.del{
  width:100%;
  height:100rpx;
  background:#fff;
  border-top:1rpx solid #eee;
  text-align:center;
  line-height:100rpx;
  position:fixed;
  left:0;
  bottom:0;
  z-index:9;
  overflow:hidden;
}
.del .del-icon{
  display:block;
  width:25rpx;
  height:28rpx;
  float:left;
  margin-left:300rpx;
  margin-top:36rpx;
  margin-right:20rpx;
}
.del .del-text{
  display:block;
  float:left;
  line-height:100rpx;
  font-size:30rpx;
  color:rgb(73,70,71);
}
.del icon{
  margin-top:20rpx;
  display:block;
  float:left;
  margin-left:150rpx;
  margin-right:10rpx;
}
.del .all{
  font-size:26rpx;
  color:rgb(173,166,168);
  line-height:100rpx;
  display:block;
  float:left;
}
@keyframes mymove
{
  from { transform: translate(0px);}
  to {transform: translate(-50px)}
}
.empty{
  width:670rpx;
  height:405rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:600rpx;
}
.empty .empty-icon{
  width:186rpx;
  height:216rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}