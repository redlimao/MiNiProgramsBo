/* pages/xun/xun.wxss */
.container{
  padding:0;
}
.nav{
  width:100%;
  height:90rpx;
  display: flex;
  justify-content:space-around;
  background:#fff;
  margin-bottom:20rpx;
}
.nav .nav-list{
  display:block;
  line-height:90rpx;
  font-size:30rpx;
  color:rgb(255,127,174);
}
.nav .nav-lists{
  color:#3894ff;
}
.nav .nav-list.actives{
  border-bottom:8rpx solid rgb(255,127,174);
}
.nav .nav-list.activess{
  border-bottom:8rpx solid #3894ff;
}
/* =====内容==== */
.inner{
  width:720rpx;
  margin:0 auto;
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
}
.inner-list{
  width:310rpx;
  height:440rpx;
  padding:20rpx;
  background:#fff;
  margin-bottom:20rpx;
  border-radius: 4rpx;
}
.inner-list .list-img{
  width:310rpx;
  height:310rpx;
  display:block;
  border-radius:4rpx;
}
.inner-list .inner-name{
  display:block;
  font-size:36rpx;
  color:rgb(73,70,71);
  margin:8rpx 0;
  font-weight:550;
}
.inner-list .inner-tag{
  overflow: hidden;
  margin-bottom:10rpx;
}
.inner-tag .tags{
  font-size:22rpx;
  padding:0 10rpx;
  color:rgb(255,127,174);
  border:2rpx solid rgb(255,127,174);
  border-radius:20rpx;
  float:left;
  height:36rpx;
  line-height:38rpx;
  margin-right:20rpx;
}
.tags.activess{
  color:#3894ff;
  border:2rpx solid #3894ff;
}
.inner-flower{
  font-size:22rpx;
  color:rgb(173,166,168);
  display: block;
}
.empty{
  width:670rpx;
  height:405rpx;
  position:absolute;
  left:0;
  right:0;
  margin:auto;
  top:600rpx;
}
.empty .empty-icon{
  width:339rpx;
  height:405rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}