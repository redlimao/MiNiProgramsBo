/* pages/result/result.wxss */
.result{
  width:710rpx;
  height:1000rpx;
  position:relative;
  padding-bottom:100rpx;
  background:#fff;
  margin:0 auto;
  border-radius:4rpx;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  margin-top:20rpx;
  overflow:hidden;
}
.message{
  overflow:hidden;
  margin:0 auto;
  margin-top:30rpx;
  margin-bottom:50rpx;
  width:650rpx;
  height:130rpx;
}
.message .photo{
  width:110rpx;
  height:110rpx;
  border-radius:50%;
  border:2rpx solid #fff;
  float:left;
  margin-right:30rpx;
  margin-left:5rpx;
  margin-top:10rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}
.message  .name{
  display:block;
  float:left;
  line-height:130rpx;
  font-size:36rpx;
  color:rgb(73,70,71);
}
.result-cont{
  width:645rpx;
  margin:0 auto;
  font-size:30rpx;
  color: "#494647";
  line-height:47rpx;
}
.share{
  width:645rpx;
  height:100rpx;
  text-align:center;
  line-height:100rpx;
  border-top:1rpx solid #eee;
  position:absolute;
  left:0;
  right:0;
  margin: auto;
  bottom:0;
  font-size:26rpx;
  color: "#494647";
}
button{
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  border:none;
  background:rgba(0,0,0,0);
  font-size:26rpx;
  color: "#494647";
  line-height:100rpx;
  margin:0;
  padding:0;
}
button:after{
  border:none;
}