/* pages/qian/qian.wxss */
.container{
  padding-bottom:100rpx;
}
.qian{
  width:100%;
  background:#fff;
  position:relative;
  margin-bottom:20rpx;
  padding-bottom:30rpx;
}
.month{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  text-align:center;
  font-size:36rpx;
  color:rgb(73,70,71);
  font-weight:bold;
  margin-bottom:30rpx;
}
.date{
  display:flex;
  justify-content:space-around;
  height:50rpx;
  margin-bottom:30rpx;
}
.date-list{
  height:50rpx;
  line-height:50rpx;
  font-size:30rpx;
  color:rgb(173,166,168);
}
.date-list.active{
  font-size:48rpx;
  font-weight:bold;
  color:rgb(73,70,71);
}
 .canvas{
  width:100%;
  height:400rpx;
  margin-bottom:30rpx;
  background:rgb(255,127,174);
}
.all_points{
  font-size:30rpx;
  color:#fff;
  position:absolute;
  left:20rpx;
  top:0rpx;
  font-weight:bold;
}
.qian-ci{
  width:100%;
  text-align:center;
  font-size:26rpx;
  color:rgb(73,70,71);
  margin-bottom:20rpx;
}
.qian-btn{
  width:200rpx;
  height:60rpx;
  margin:0 auto;
  border-radius:50rpx;
  text-align:center;
  line-height:60rpx;
  font-size:30rpx;
  color:rgb(255,127,174);
  border:1rpx solid rgb(255,127,174);
}
.qian-btns{
  width:200rpx;
  height:60rpx;
  margin:0 auto;
  border-radius:50rpx;
  text-align:center;
  line-height:60rpx;
  font-size:30rpx;
  color:#fff;
  background:rgb(255,127,174);
}
.all-box{
  position:relative;
  height:60rpx;
}
.covers_all{
  overflow:hidden;
  position:absolute;
  right:20rpx;
  width:140rpx;
  top:22rpx;
}
.covers-icon{
  display:block;
  width:26rpx;
  height:26rpx;
  float:left;
  margin-right:8rpx;
}
.covers-text{
  font-size:26rpx;
  color:rgb(254,1,55);
  display:block;
  line-height:26rpx;
}
/* ======积分导航===== */
.nav{
  width:100%;
  height:90rpx;
  display: flex;
  justify-content:space-around;
  border-bottom:1rpx solid #eee;
  background:#fff;
}
.nav .nav-list{
  display:block;
  line-height:90rpx;
  font-size:30rpx;
  color:rgb(173,166,168);
}
.nav .nav-list.actives{
  color:rgb(255,127,174);
  border-bottom:8rpx solid rgb(255,127,174);
}
.inner{
  width:100%;
  background:#fff;
}
.shou-list{
  height:100rpx;
  border-bottom:1rpx solid #eee;
  overflow:hidden;
  padding:10rpx 30rpx;
}
.shou-list .list-fl{
  width:80%;
  height:100%;
  float:left;
  display:flex;
  justify-content:space-between;
  flex-direction: column;
}
.shou-list .list-fl .text{
  display:block;
  width:100%;
  font-size:30rpx;
  color:rgb(55,54,52);
}
.shou-list .list-fl .time{
  display:block;
  width:100%;
  font-size:22rpx;
  color:rgb(177,174,171);
}
.shou-list .list-fr{
  width:20%;
  height:100%;
  float:left;
  line-height:100rpx;
  font-size:30rpx;
  color:rgb(255,127,174);
  text-align:center;
}
.shou-list .list-frs{
  color:rgb(254,1,55);
}
.right-item{ 
 display: none; 
} 
 .right-item.active{ 
 display: block; 
}
.empty{
  width:100%;
  line-height:100rpx;
  color:#b2b2b2;
  font-size:32rpx;
  text-align:center;
}
/* ====进入商城==== */
.in{
  width:100%;
  text-align:center;
  line-height:100rpx;
  border-top:1rpx solid #eee;
  font-size:36rpx;
  color:rgb(73,70,71);
  position:fixed;
  left:0;
  bottom:0;
  z-indeX:9;
  background:#fff;
}
.empty{
  top:1200rpx;
}