/**tagdetail.wxss**/
page{background-color: #fff;}
    /* 时间标签 */
    .con{width: 100%;padding:20rpx;background-color: #fff;box-sizing: border-box;}
        .p-tit{color: #333;font-size: 26rpx;height: 80rpx;line-height: 80rpx;}
        .p-tit-txt{color: #ef4136;}
        .p-tags{display: flex;padding-bottom: 20rpx;flex-wrap: wrap;}
            .p-item{width: 157rpx;margin:0 11.5rpx 20rpx 11.5rpx;border:2rpx dotted #999999;padding: 10rpx 10rpx 0 10rpx;box-sizing: border-box;border-radius: 10rpx;position: relative;}
                .p-tip{position: absolute;z-index: 2;top: -15rpx;right: -15rpx;background-color: #fff;border-radius: 50%;}
                .p-img{width: 133rpx;height: 133rpx;display: block;border-radius: 10rpx;}
                .p-txt{height: 60rpx;line-height: 60rpx;font-size: 26rpx;color: #666;text-align: center;overflow: hidden;}
            .p-item.on{border:2rpx solid #826540;color: #826540;}
            .p-item.on .p-txt{color: #826540;}
        .p-con{display: flex;align-items: center;height: 100rpx;justify-content: space-between;}
        .p-tit{color: #333;font-size: 26rpx;height: 80rpx;line-height: 80rpx;}
        .p-tit-txt{color: #ef4136;}
        .pick-box{flex: 1;}
        .pick-txt{width: 100%;padding: 0 40rpx;box-sizing: border-box;display: flex;border:1rpx solid #ececec;border-radius: 10rpx;align-items: center;}
            .pick-txts{flex: 1;color: #333;font-size: 28rpx;line-height: 60rpx;height:60rpx;text-align: center;}
            .pick-icon{width: 24rpx;height: 24rpx;display: block;transform: rotate(90deg);}
            .empty{padding: 100rpx 0;text-align: center;color: #666;font-size: 26rpx;}
.btn-next{width: 200rpx;height: 70rpx;text-align: center;line-height: 70rpx;background-color: #826540;color: #fff;font-size: 26rpx;margin: 20rpx auto;border-radius: 35rpx;}

