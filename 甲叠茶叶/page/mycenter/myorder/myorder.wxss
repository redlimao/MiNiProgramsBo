/**myorder.wxss**/
/*主体样式*/
.con{width: 100%;padding: 0 20rpx;box-sizing: border-box;background-color: #fff;}
/* 菜单 */
.menu{display: flex;justify-content: space-around;}
    .m-item{height: 90rpx;border-bottom: 4rpx solid transparent;box-sizing: border-box;text-align: center;line-height: 90rpx;font-size: 30rpx;color: #666;}
    .m-item.on{border-bottom: 4rpx solid #826540;color: #826540;}
/* 商品详情 */
.wrap{}
.list{width: 100%;box-sizing: border-box;border-top:1rpx solid #f8f8f8;background-color: #fff;margin-bottom: 20rpx;}
    .b-infos{height: 90rpx;display: flex;align-items: center;background-color: #fff;padding: 0 20rpx;box-sizing: border-box;}
        .b-img{width: 44rpx;height: 44rpx;border-radius: 50%;}
        .c-tit{font-size: 26rpx;color: #333;flex: 1;padding: 0 20rpx;}
        .tip{font-size: 26rpx;color: #f0ad4e;}
    .c-box{height: 240rpx;width: 100%;padding: 10rpx 20rpx;display: flex;box-sizing: border-box;background-color: #FaFaFa;}
        .c-img{height: 220rpx;width: 220rpx;display: block;}
        .c-info{flex: 1;padding-left: 20rpx;}
            .c-title{height: 80rpx;line-height: 40rpx;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;font-size: 30rpx;color: #333;}
            .c-tag{font-size: 26rpx;color: #999999;height: 80rpx;line-height: 80rpx;}
            .c-infos{display: flex;justify-content: space-between;align-items: center;height: 60rpx;}
                .c-infos-txt1{font-size: 34rpx;color:#333;}
                .c-infos-txt1::before{content:'¥';font-size: 24rpx;color: #333;padding-left:5rpx;}
                .c-infos-txt2{font-size: 30rpx;color: #666;}
    .b-txts{font-size: 28rpx;color: #333;line-height: 90rpx;height: 90rpx;text-align: right;border-bottom:1rpx solid #f8f8f8;padding: 0 20rpx;}
    .b-infos.end{justify-content: flex-end;}
    .b-btns{height: 50rpx;padding: 0 25rpx;border: 1rpx solid #999999;border-radius: 25rpx;line-height: 50rpx;margin-left: 20rpx;font-size: 26rpx;box-sizing: border-box;color: #333;}
.empty{text-align: center;color: #666;font-size: 26rpx;padding-top: 300rpx;}