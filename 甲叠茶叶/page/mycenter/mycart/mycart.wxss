/**mycart.wxss**/
.t-con{padding: 0 20rpx;height: 90rpx;width: 100%;box-sizing: border-box;display: flex;align-items: center;justify-content: flex-end;background-color: #fff;}
    .t-btn{height: 50rpx;border:1rpx solid #ea5e5d;font-size: 26rpx;padding: 0 40rpx;line-height:52rpx;border-radius: 34rpx;color: #ea5e5d;margin-right: 30rpx;}
.wrap{padding: 0 20rpx;margin-top: 20rpx;padding-bottom: 100rpx;}
.list{padding: 20rpx;background-color: #fff;border-radius: 10rpx;display: flex;align-items: center;height: 240rpx;}

    .c-box{flex: 1;padding-left: 20rpx;display: flex;}
        .c-img{height: 220rpx;width: 220rpx;display: block;}
        .c-info{flex: 1;padding-left: 20rpx;}
            .c-title{height: 80rpx;line-height: 40rpx;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;font-size: 30rpx;color: #333;}
            .c-tag{font-size: 26rpx;color: #999999;height: 80rpx;line-height: 80rpx;}
            .c-infos{display: flex;justify-content: space-between;align-items: center;height: 60rpx;}
                .c-infos-txt1{font-size: 34rpx;color:#ea5e5d;}
                .c-infos-txt1::before{content:'¥';font-size: 24rpx;color: #ea5e5d;padding-left:5rpx;}
                .c-infos-txt2{font-size: 30rpx;color: #666;}
                /* 加减 */
                .p-boxs{display: flex;}
                    .p-btn{width: 50rpx;height: 50rpx;background-color: #ececec;color: #333;text-align: center;line-height: 50rpx;font-size: 50rpx;}
                    .p-txt{width: 90rpx;height: 50rpx;line-height: 50rpx;text-align: center;color: #333;background-color: #ececec;font-size: 26rpx;margin: 0 5rpx;}
.empty{color: #999999;font-size: 26rpx;text-align: center;padding-top: 200rpx;}                    
/* 底部 */
.foot{width: 100%;position: fixed;bottom: 0;left: 0;box-sizing: border-box;background-color: #fff;display: flex;align-items: center;height: 100rpx;}
    .btn-all{display: flex;height: 100rpx;width: 200rpx;align-items: center;padding-left: 20rpx;}
        .btn-txt{font-size: 26rpx;color: #333;padding-left: 20rpx;}
    .f-txt{flex: 1;font-size: 32rpx;color: #ef4136;text-align: right;padding-right: 20rpx;}
    .btn-pay{height:100rpx;width: 220rpx;background-color:#ed622b;color: #fff;text-align: center;line-height: 100rpx;font-size: 32rpx;}
    .btn-pay.grey{background-color: #cccccc;}