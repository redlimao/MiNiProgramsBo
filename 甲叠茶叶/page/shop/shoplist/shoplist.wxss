.search{width: 100%;height: 90rpx;background-color: #fff;}
    .s-box{width:700rpx;height: 64rpx;margin: 0 auto;border-radius: 32rpx;background-color: #f8f8f8;display: flex;align-items: center;padding: 0 35rpx;box-sizing: border-box;}
        .s-img{width: 27rpx;height: 27rpx;display: block;}
        .s-txt{font-size: 26rpx;color: #999999;flex: 1;padding-left: 30rpx;}
.btn-c{margin: 20rpx;background-color: #ef4136;border-radius: 10rpx;color: #fff;font-size: 30rpx;line-height: 80rpx;height: 80rpx;text-align: center;}

.con{padding: 20rpx 10rpx;box-sizing: border-box;display: flex;flex-wrap: wrap;}
    .c-item{width: 345rpx;margin: 0 10rpx;background-color: #fff;padding: 20rpx;box-sizing:border-box}
        .c-img{width: 305rpx;height: 305rpx;display: block;background-color: #ccc;}
        .c-txt{height: 60rpx;line-height: 60rpx;overflow: hidden;font-size: 26rpx;color: #666666;}
        .info{display: flex;align-items: center;height: 60rpx;}
            .info-txt{font-size: 30rpx;color: #ef4136;flex: 1;padding-right: 10rpx;}
            .info-txt::before{content:'¥';font-size: 24rpx;color: #fd9710;padding-left:5rpx;}
            .info-btn{width: 70rpx;height: 30rpx;display:block;}

.empty{text-align: center;color: #ccc;font-size: 26rpx;padding: 200rpx 0;}

/* 弹窗样式 */
.pop-bg{position: fixed;width: 100%;height: 100%;background-color: rgba(0,0,0,0.5);top: 0;left: 0;z-index: 2;display: none;}
.pop{width: 560rpx;height: 671rpx;position:fixed;top: 50%;left: 50%;z-index: 3;margin-left: -280rpx;margin-top: -335rpx;display: none;}
.pop-bg.on,.pop.on{display: block;}
    .p-close{width: 60rpx;height: 60rpx;position: absolute;top: 725rpx;left: 250rpx;z-index: 3;}
    .pop-img{position: absolute;top: 0;left: 0;width: 560rpx;height: 671rpx;z-index: 3;}
    .pop-content{position: absolute;top: 0;left: 0;padding-top: 245rpx;height: 426rpx;width: 560rpx;z-index: 4;}
        .p-coupon-view{width: 510rpx;display: flex;justify-content: center;margin:0 auto}
            .p-item{width: 172rpx;height: 172rpx;position: relative;}
                .p-item-img{position: absolute;width: 172rpx;height: 172rpx;top: 0;left: 0;}
                .p-item-con{position: absolute;padding-top: 20rpx;width: 172rpx;height: 152rpx;top: 0;left: 0;z-index: 5;}
                    .p-money{display: flex;height: 80rpx;justify-content: center;align-items: baseline;}
                        .p-money-icon{color: #f9392c;font-size:30rpx}
                        .p-moneys{line-height: 80rpx;font-size: 60rpx;color: #f9392c;}
                    .p-txts{width: 150rpx;padding-top:8rpx;border-top:1rpx dotted #cacaca;color: #666666;font-size: 20rpx;text-align:center;margin:0 auto;display:block;}
        .p-texts{padding-top: 29rpx;line-height: 40rpx;text-align: center;font-size: 24rpx;color: #9a9a9a;display:block;}
        .p-btn{margin: 0 auto;margin-top: 70rpx;width: 500rpx;height: 80rpx;border-radius: 5rpx;background-color: #f84033;color:#fff;font-size: 30rpx;text-align: center;line-height: 80rpx;}
    